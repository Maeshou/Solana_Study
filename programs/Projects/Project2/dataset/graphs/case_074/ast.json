  {
    "name": "save",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Save >",
      "val: u64"
    ],
    "attributes": [],
    "body": [
      "let (expected , _bump) = Pubkey :: find_program_address (& [b\"store\" , ctx . accounts . user . key . as_ref ()] , ctx . program_id ,) ;",
      "require_keys_eq ! (ctx . accounts . storage . key , expected) ;",
      "let mut buf = ctx . accounts . storage . data . borrow_mut () ;",
      "buf [.. 8] . copy_from_slice (& val . to_le_bytes ()) ;",
      "msg ! (\"Written value: {}\" , val) ;",
      "let read_val = u64 :: from_le_bytes (buf [.. 8] . try_into () . unwrap ()) ;",
      "emit ! (DataStored { value : read_val }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "clear",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Save >"
    ],
    "attributes": [],
    "body": [
      "let mut buf = ctx . accounts . storage . data . borrow_mut () ;",
      "for b in buf . iter_mut ()",
      "{",
      "* b = 0 ;",
      "}",
      "emit ! (DataCleared { }) ;",
      "Ok (())"
    ]
  },
