[
  {
    "name": "init",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitTime >",
      "end_unix: i64"
    ],
    "attributes": [
      "# [doc = \" 初期化：終了時刻を設定\"]"
    ],
    "body": [
      "let rec = & mut ctx . accounts . rec ;",
      "rec . end_time = end_unix ;",
      "rec . value = 0 ;",
      "emit ! (TimeInitialized { end_unix }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "timed_update",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateTime >",
      "val: u64"
    ],
    "attributes": [
      "# [doc = \" 現在時刻が終了前なら更新可能\"]"
    ],
    "body": [
      "let clock = Clock :: get () ? ;",
      "require ! (clock . unix_timestamp < ctx . accounts . rec . end_time , ErrorCode :: Expired) ;",
      "let rec = & mut ctx . accounts . rec ;",
      "rec . value = val ;",
      "emit ! (TimeUpdated { by : ctx . accounts . user . key () , val }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "snapshot",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < View >"
    ],
    "attributes": [
      "# [doc = \" 終了後のスナップショット取得（読み取りのみ）\"]"
    ],
    "body": [
      "let rec = & ctx . accounts . rec ;",
      "Ok (Snapshot { value : rec . value , end_time : rec . end_time , })"
    ]
  },
