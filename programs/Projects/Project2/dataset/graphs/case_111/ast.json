[
  {
    "name": "create_document",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateDocument >",
      "title: String",
      "content: String"
    ],
    "attributes": [
      "# [doc = \" ドキュメント作成：所有者を署名者に設定し、ステータスは `Draft`\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "doc . owner = ctx . accounts . author . key () ;",
      "doc . title = title ;",
      "doc . content = content ;",
      "doc . status = DocStatus :: Draft ;",
      "doc . created = ctx . accounts . clock . unix_timestamp ;",
      "doc . updated = doc . created ;",
      "Ok (())"
    ]
  },
  {
    "name": "approve_document",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyDocument >"
    ],
    "attributes": [
      "# [doc = \" ドキュメント承認：所有者のみが呼び出し可能、ステータスを `Approved` に更新\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "doc . status = DocStatus :: Approved ;",
      "doc . updated = ctx . accounts . clock . unix_timestamp ;",
      "Ok (())"
    ]
  },
  {
    "name": "reject_document",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyDocument >"
    ],
    "attributes": [
      "# [doc = \" ドキュメント却下：所有者のみが呼び出し可能、ステータスを `Rejected` に更新\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "doc . status = DocStatus :: Rejected ;",
      "doc . updated = ctx . accounts . clock . unix_timestamp ;",
      "Ok (())"
    ]
  },
