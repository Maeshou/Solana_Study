  {
    "name": "initialize_tip_jar",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeTipJar >"
    ],
    "attributes": [
      "# [doc = \" TipJar 初期化：主要フィールドだけセットし、残りは Default\"]"
    ],
    "body": [
      "let jar = & mut ctx . accounts . tip_jar ;",
      "let bump = * ctx . bumps . get (\"tip_jar\") . unwrap () ;",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "* jar = TipJar { bump , last_tip_ts : now , .. Default :: default () } ;",
      "Ok (())"
    ]
  },
  {
    "name": "tip",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Tip >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" チップ送信：累計を加算し、最高チップ更新ロジックを `if` で分離\"]"
    ],
    "body": [
      "let jar = & mut ctx . accounts . tip_jar ;",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "jar . total_tips = jar . total_tips . wrapping_add (amount) ;",
      "if amount > jar . top_tip",
      "{",
      "jar . top_tip = amount ;",
      "jar . top_tipper = ctx . accounts . tipper . key () ;",
      "}",
      "jar . last_tip_ts = now ;",
      "Ok (())"
    ]
  },
  {
    "name": "reset",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ResetTipJar >"
    ],
    "attributes": [
      "# [doc = \" リセット：累計・最高チップ情報をクリアし、時刻だけ更新\"]"
    ],
    "body": [
      "let jar = & mut ctx . accounts . tip_jar ;",
      "let bump = jar . bump ;",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "* jar = TipJar { bump , last_tip_ts : now , .. Default :: default () } ;",
      "Ok (())"
    ]
  },
