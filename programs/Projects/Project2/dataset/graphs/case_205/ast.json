[
  {
    "name": "init",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitEnergy >",
      "max_energy: u64",
      "refill_interval: u64"
    ],
    "attributes": [
      "# [doc = \" 初期化：最大エネルギーとリチャージ間隔を設定\"]"
    ],
    "body": [
      "let e = & mut ctx . accounts . energy ;",
      "e . max = max_energy ;",
      "e . current = max_energy ;",
      "e . interval = refill_interval ;",
      "e . last_used_slot = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "spend",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyEnergy >",
      "amount: u64",
      "current_slot: u64"
    ],
    "attributes": [
      "# [doc = \" エネルギー消費\"]"
    ],
    "body": [
      "let e = & mut ctx . accounts . energy ;",
      "let passed = current_slot . saturating_sub (e . last_used_slot) ;",
      "let regain = passed / e . interval ;",
      "e . current = (e . current + regain) . min (e . max) ;",
      "if amount <= e . current",
      "{",
      "e . current -= amount ;",
      "e . last_used_slot = current_slot ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "InitEnergy",
