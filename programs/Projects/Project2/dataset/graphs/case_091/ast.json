[
  {
    "name": "save_note",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SaveNote >",
      "text: String"
    ],
    "attributes": [
      "# [doc = \" メモを新規作成または上書きし、保存バージョンを更新\"]"
    ],
    "body": [
      "let note = & mut ctx . accounts . note_acc ;",
      "note . content = text . clone () ;",
      "note . version = note . version . checked_add (1) . unwrap () ;",
      "note . history . push (format ! (\"Saved as v{}\" , note . version)) ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_entry",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AppendLog >",
      "entry: String"
    ],
    "attributes": [
      "# [doc = \" 任意のエントリを履歴に追加\"]"
    ],
    "body": [
      "let note = & mut ctx . accounts . note_acc ;",
      "note . history . push (entry) ;",
      "Ok (())"
    ]
  },
