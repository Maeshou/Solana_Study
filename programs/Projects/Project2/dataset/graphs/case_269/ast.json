    "body": [
      "let st = & mut ctx . accounts . stamina ;",
      "st . actions = st . actions . saturating_add (1) ;",
      "if st . actions % st . recover_rate == 0",
      "{",
      "st . recoveries = st . recoveries . saturating_add (1) ;",
      "}",
