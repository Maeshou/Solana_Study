  },
  {
    "name": "initialize",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Initialize >"
    ],
    "attributes": [
      "# [doc = \" ボード初期化：内部 Vec は空、bump のみ設定\"]"
    ],
    "body": [
      "let b = * ctx . bumps . get (\"board\") . unwrap () ;",
      "ctx . accounts . board . 0 = b ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >",
      "task_id: u64"
    ],
    "attributes": [
      "# [doc = \" タスク追加：件数制限チェック＋assignee なしで追加\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . board . 1 ;",
      "if list . len () >= MAX_TASKS",
      "{",
      "return err ! (ErrorCode :: MaxTasksReached) ;",
      "}",
      "list . push ((task_id , Pubkey :: default ())) ;",
      "Ok (())"
    ]
  },
  {
    "name": "assign_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >",
      "task_id: u64",
      "assignee: Pubkey"
    ],
    "attributes": [
      "# [doc = \" タスク割当：既存タスク探索＋担当者更新\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . board . 1 ;",
      "let mut found = false ;",
      "for entry in list . iter_mut ()",
      "{",
      "if entry . 0 == task_id",
      "{",
      "entry . 1 = assignee ;",
      "found = true ;",
      "}",
      "}",
      "if found == false",
      "{",
      "return err ! (ErrorCode :: TaskNotFound) ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "remove_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >",
      "task_id: u64"
    ],
    "attributes": [
      "# [doc = \" タスク削除：該当タスクを一括除去\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . board . 1 ;",
      "list . retain (| & (id , _) | { if id == task_id { false } else { true } }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "count_tasks",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >"
    ],
    "attributes": [
      "# [doc = \" タスク数報告：ログ出力\"]"
    ],
    "body": [
      "let cnt = ctx . accounts . board . 1 . len () as u64 ;",
      "msg ! (\"Total tasks: {}\" , cnt) ;",
      "Ok (())"
    ]
  },
