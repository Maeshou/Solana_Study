[
  {
    "name": "gain_xp",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < GainXp >",
      "xp: u64"
    ],
    "attributes": [
      "# [doc = \" 経験値獲得\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . pass ;",
      "p . xp = p . xp . saturating_add (xp) ;",
      "while p . level < p . thresholds . len () as u8 && p . xp >= p . thresholds [p . level as usize]",
      "{",
      "p . xp -= p . thresholds [p . level as usize] ;",
      "p . level = p . level . saturating_add (1) ;",
      "p . bonuses [p . level as usize] = true ;",
      "}",
      "Ok (())"
    ]
  },
