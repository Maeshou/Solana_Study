[
  {
    "name": "apply_buff",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyBuff >",
      "buff_id: u8",
      "duration_slots: u64"
    ],
    "attributes": [],
    "body": [
      "let b = & mut ctx . accounts . buffs ;",
      "let expiry = ctx . accounts . user . to_account_info () . lamports () as u64 + duration_slots ;",
      "b . active . insert (buff_id , expiry) ;",
      "b . apply_count = b . apply_count . saturating_add (1) ;",
      "Ok (())"
    ]
  },
  {
    "name": "expire_buffs",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyBuff >"
    ],
    "attributes": [],
    "body": [
      "let b = & mut ctx . accounts . buffs ;",
      "let now = ctx . accounts . user . to_account_info () . lamports () as u64 ;",
      "let expired : Vec < u8 > = b . active . iter () . filter_map (| (& id , & exp) | if exp <= now { Some (id) } else { None }) . collect () ;",
      "for id in expired",
      "{",
      "b . active . remove (& id) ;",
      "b . expire_count = b . expire_count . saturating_add (1) ;",
      "}",
      "Ok (())"
    ]
  },
