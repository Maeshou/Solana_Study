[
  {
    "name": "init_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitItem >",
      "nft_id: u64",
      "rarity: u8"
    ],
    "attributes": [],
    "body": [
      "let item = & mut ctx . accounts . item ;",
      "item . id = nft_id ;",
      "item . rarity = rarity ;",
      "item . experience = 0 ;",
      "item . level = 1 ;",
      "Ok (())"
    ]
  },
  {
    "name": "gain_experience",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyItem >",
      "amount: u64"
    ],
    "attributes": [],
    "body": [
      "let item = & mut ctx . accounts . item ;",
      "item . experience = item . experience . checked_add (amount) . unwrap () ;",
      "Ok (())"
    ]
  },
  {
    "name": "level_up",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyItem >"
    ],
    "attributes": [],
    "body": [
      "let item = & mut ctx . accounts . item ;",
      "if item . experience >= item . level * 100",
      "{",
      "item . experience -= item . level * 100 ;",
      "item . level += 1 ;",
      "}",
      "Ok (())"
    ]
  },
