[
  {
    "name": "create_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateTask >",
      "description: String"
    ],
    "attributes": [
      "# [doc = \" タスク作成\"]"
    ],
    "body": [
      "require ! (description . len () <= 128 , ErrorCode :: DescriptionTooLong) ;",
      "let task = & mut ctx . accounts . task ;",
      "task . owner = ctx . accounts . user . key () ;",
      "task . description = description ;",
      "task . completed = false ;",
      "Ok (())"
    ]
  },
  {
    "name": "complete_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyTask >"
    ],
    "attributes": [
      "# [doc = \" タスク完了マーク\"]"
    ],
    "body": [
      "let task = & mut ctx . accounts . task ;",
      "require ! (task . owner == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "task . completed = true ;",
      "Ok (())"
    ]
  },
  {
    "name": "CreateTask",
    "node_type": "struct",
    "fields": [
      {
        "name": "task",
        "attribute": "# [doc = \" init 制約で再初期化（Reinit Attack）を防止\"] # [account (init , payer = user , space = 8 + 32 + 4 + 128 + 1)]",
        "field_type": "Account < 'info , TaskAccount >"
      },
      {
        "name": "user",
        "attribute": "# [doc = \" 実際に署名したユーザー（Signer Authorization）\"] # [account (mut)]",
        "field_type": "Signer < 'info >"
      },
      {
        "name": "system_program",
        "attribute": null,
        "field_type": "Program < 'info , System >"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
  {
