[
  {
    "name": "create_habit",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateHabit >",
      "name: String"
    ],
    "attributes": [
      "# [doc = \" 習慣を新規作成\"]"
    ],
    "body": [
      "if name . len () > 32",
      "{",
      "return Err (ErrorCode :: NameTooLong . into ()) ;",
      "}",
      "let habit = & mut ctx . accounts . habit ;",
      "habit . owner = ctx . accounts . user . key () ;",
      "habit . name = name ;",
      "habit . count = 0 ;",
      "habit . last_done = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "mark_done",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < MarkDone >"
    ],
    "attributes": [
      "# [doc = \" 今日の習慣を完了マーク\"]"
    ],
    "body": [
      "let habit = & mut ctx . accounts . habit ;",
      "let user = ctx . accounts . user . key () ;",
      "if habit . owner != user",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "if now <= habit . last_done",
      "{",
      "return Err (ErrorCode :: AlreadyDone . into ()) ;",
      "}",
      "habit . last_done = now ;",
      "habit . count = habit . count . checked_add (1) . ok_or (ErrorCode :: Overflow) ? ;",
      "Ok (())"
    ]
  },
  {
    "name": "CreateHabit",
    "node_type": "struct",
    "fields": [
      {
        "name": "habit",
        "attribute": "# [doc = \" init で再初期化防止\"] # [account (init , payer = user , space = 8 + 32 + 4 + 32 + 8 + 8)]",
