    "node_type": "struct",
    "fields": [
      {
        "name": "favorite",
        "attribute": "# [doc = \" 同一アカウント再初期化防止（Reinit Attack）\"] # [account (init , payer = user , space = 8 + 32 + 32 + 1)]",
