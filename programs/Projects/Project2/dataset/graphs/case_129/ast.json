[
  {
    "name": "add_favorite",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddFavorite >",
      "item: Pubkey"
    ],
    "attributes": [
      "# [doc = \" アイテムをお気に入りに追加\"]"
    ],
    "body": [
      "let fav = & mut ctx . accounts . favorite ;",
      "if fav . is_active",
      "{",
      "return Err (ErrorCode :: AlreadyFavorited . into ()) ;",
      "}",
      "fav . owner = ctx . accounts . user . key () ;",
      "fav . item = item ;",
      "fav . is_active = true ;",
      "Ok (())"
    ]
  },
  {
    "name": "remove_favorite",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyFavorite >"
    ],
    "attributes": [
      "# [doc = \" お気に入りを解除\"]"
    ],
    "body": [
      "let fav = & mut ctx . accounts . favorite ;",
      "if fav . owner != ctx . accounts . user . key ()",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "if ! fav . is_active",
      "{",
      "return Err (ErrorCode :: AlreadyRemoved . into ()) ;",
      "}",
      "fav . is_active = false ;",
      "Ok (())"
    ]
  },
  {
