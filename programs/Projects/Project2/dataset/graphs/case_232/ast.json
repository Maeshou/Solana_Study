[
  {
    "name": "record_login",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RecLogin >",
      "current_slot: u64"
    ],
    "attributes": [],
    "body": [
      "let s = & mut ctx . accounts . streak ;",
      "let days_passed = (current_slot - s . last_slot) / s . slots_per_day ;",
      "if days_passed == 1",
      "{",
      "s . streak = s . streak . saturating_add (1) ;",
      "s . last_slot = current_slot ;",
      "s . bonus_points += 10 ;",
      "} else",
      "{",
      "s . streak = 1 ;",
      "s . last_slot = current_slot ;",
      "s . bonus_points = 5 ;",
      "}",
      "Ok (())"
    ]
  },
