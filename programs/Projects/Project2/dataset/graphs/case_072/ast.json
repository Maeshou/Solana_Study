[
  {
    "name": "flip",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Flip >"
    ],
    "attributes": [],
    "body": [
      "let rec = & mut ctx . accounts . rec ;",
      "rec . flag = ! rec . flag ;",
      "rec . last_actor = ctx . accounts . authority . key () ;",
      "rec . flip_count = rec . flip_count . checked_add (1) . ok_or (ErrorCode :: Overflow) ? ;",
      "emit ! (FlagToggled { actor : ctx . accounts . authority . key () , new_flag : rec . flag , total : rec . flip_count }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "reset_flag",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Flip >"
    ],
    "attributes": [],
    "body": [
      "let rec = & mut ctx . accounts . rec ;",
      "rec . flag = false ;",
      "rec . last_actor = ctx . accounts . authority . key () ;",
      "rec . flip_count = 0 ;",
      "emit ! (FlagReset { actor : ctx . accounts . authority . key () }) ;",
      "Ok (())"
    ]
  },
