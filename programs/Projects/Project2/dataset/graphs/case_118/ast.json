[
  {
    "name": "initialize_logger",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeLogger >"
    ],
    "attributes": [
      "# [doc = \" ログアカウントを初期化：bump と初回ログとして 0 を設定\"]"
    ],
    "body": [
      "let logger = & mut ctx . accounts . logger ;",
      "logger . bump = * ctx . bumps . get (\"logger\") . unwrap () ;",
      "logger . last_balance = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "record_balance",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RecordBalance >"
    ],
    "attributes": [
      "# [doc = \" 指定アカウントの残高を読み取り、ログを更新\"]"
    ],
    "body": [
      "let logger = & mut ctx . accounts . logger ;",
      "let target_info = & ctx . accounts . target ;",
      "logger . last_balance = * * target_info . lamports . borrow () ;",
      "Ok (())"
    ]
  },
