[
  {
    "name": "create_rsvp",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateRsvp >",
      "event_id: u64",
      "note: String"
    ],
    "attributes": [
      "# [doc = \" 参加表明 (RSVP) を作成\"]"
    ],
    "body": [
      "require ! (note . len () <= 128 , ErrorCode :: NoteTooLong) ;",
      "let rsvp = & mut ctx . accounts . rsvp ;",
      "rsvp . attendee = ctx . accounts . user . key () ;",
      "rsvp . event_id = event_id ;",
      "rsvp . note = note ;",
      "rsvp . confirmed = true ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_rsvp",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateRsvp >",
      "confirmed: bool",
      "new_note: String"
    ],
    "attributes": [
      "# [doc = \" RSVP 情報を更新 (確認／キャンセル)\"]"
    ],
    "body": [
      "let rsvp = & mut ctx . accounts . rsvp ;",
      "require ! (rsvp . attendee == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "require ! (new_note . len () <= 128 , ErrorCode :: NoteTooLong) ;",
      "rsvp . confirmed = confirmed ;",
      "rsvp . note = new_note ;",
      "Ok (())"
    ]
  },
