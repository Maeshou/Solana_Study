    "node_type": "struct",
    "fields": [
      {
        "name": "rsvp",
        "attribute": "# [doc = \" init 制約で同一アカウント再初期化防止（Reinit Attack）\"] # [account (init , payer = user , space = 8 + 32 + 8 + 4 + 128 + 1)]",
