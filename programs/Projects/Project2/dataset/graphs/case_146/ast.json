[
  {
    "name": "init_alert",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitAlert >",
      "threshold: u64"
    ],
    "attributes": [
      "# [doc = \" アラート設定アカウントの初期化\"]"
    ],
    "body": [
      "require ! (threshold > 0 , ErrorCode :: InvalidThreshold) ;",
      "let alert = & mut ctx . accounts . alert ;",
      "alert . owner = ctx . accounts . user . key () ;",
      "alert . threshold = threshold ;",
      "alert . active = true ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_alert",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateAlert >",
      "threshold: u64"
    ],
    "attributes": [
      "# [doc = \" しきい値の更新\"]"
    ],
    "body": [
      "require ! (threshold > 0 , ErrorCode :: InvalidThreshold) ;",
      "let alert = & mut ctx . accounts . alert ;",
      "require ! (alert . owner == ctx . accounts . user . key () , ErrorCode :: AccessDenied) ;",
      "alert . threshold = threshold ;",
      "Ok (())"
    ]
  },
  {
    "name": "disable_alert",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < DisableAlert >"
    ],
    "attributes": [
      "# [doc = \" アラートの無効化\"]"
    ],
    "body": [
      "let alert = & mut ctx . accounts . alert ;",
      "require ! (alert . owner == ctx . accounts . user . key () , ErrorCode :: AccessDenied) ;",
      "alert . active = false ;",
      "Ok (())"
    ]
  },
