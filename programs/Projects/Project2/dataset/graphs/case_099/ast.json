[
  {
    "name": "sign",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SignApproval >"
    ],
    "attributes": [
      "# [doc = \" ユーザ自身を「承認済み」に設定\"]"
    ],
    "body": [
      "let m = & mut ctx . accounts . manager ;",
      "m . map . insert (ctx . accounts . user . key () , true) ;",
      "Ok (())"
    ]
  },
  {
    "name": "revoke",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SignApproval >"
    ],
    "attributes": [
      "# [doc = \" ユーザ自身の承認を解除\"]"
    ],
    "body": [
      "let m = & mut ctx . accounts . manager ;",
      "m . map . insert (ctx . accounts . user . key () , false) ;",
      "Ok (())"
    ]
  },
  {
    "name": "is_approved",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ViewApproval >",
      "target: Pubkey"
    ],
    "attributes": [
      "# [doc = \" 指定ユーザの承認状態を返す\"]"
    ],
    "body": [
      "let m = & ctx . accounts . manager ;",
      "let approved = m . map . get (& target) . copied () . unwrap_or (false) ;",
      "Ok (ApprovalView { approved })"
    ]
  },
