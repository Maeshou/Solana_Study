[
  {
    "name": "init_meta",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitMeta >",
      "uri: String"
    ],
    "attributes": [
      "# [doc = \" 初期化：メタデータを格納\"]"
    ],
    "body": [
      "let m = & mut ctx . accounts . meta ;",
      "m . author = ctx . accounts . author . key () ;",
      "m . uri = uri . clone () ;",
      "m . version = 1 ;",
      "emit ! (MetaCreated { author : m . author , uri }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_meta",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyMeta >",
      "new_uri: String"
    ],
    "attributes": [
      "# [doc = \" URI 更新：作成者のみ呼出可\"]"
    ],
    "body": [
      "let m = & mut ctx . accounts . meta ;",
      "require_keys_eq ! (m . author , ctx . accounts . author . key () , ErrorCode :: NoAuth) ;",
      "m . uri = new_uri . clone () ;",
      "m . version = m . version . checked_add (1) . unwrap () ;",
      "emit ! (MetaUpdated { uri : new_uri , version : m . version }) ;",
      "Ok (())"
    ]
  },
