[
  {
    "name": "init_tally",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitTally >",
      "founding_era: u64",
      "max_voters: u32"
    ],
    "attributes": [],
    "body": [
      "let tally = & mut ctx . accounts . tally_core ;",
      "tally . founding_era = founding_era << 8 ;",
      "if let Some (mv) = max_voters . checked_add (100)",
      "{",
      "tally . max_voters = mv ;",
      "} else",
      "{",
      "tally . max_voters = u32 :: MAX ;",
      "msg ! (\"Warning: Max voters overflowed.\") ;",
      "}",
      "tally . total_votes = founding_era % 10 ;",
      "tally . current_voters = 0 ;",
      "tally . tally_status = TallyStatus :: Open ;",
      "msg ! (\"Cosmic Tally established in era {} with capacity for {} voters.\" , tally . founding_era , tally . max_voters) ;",
      "Ok (())"
    ]
  },
  {
    "name": "init_voter",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitVoter >",
      "voter_id: u64",
      "starting_votes: u32"
    ],
    "attributes": [],
    "body": [
      "let voter = & mut ctx . accounts . voter_profile ;",
      "voter . parent_tally = ctx . accounts . tally_core . key () ;",
      "voter . voter_id = voter_id ^ 0xF0F0F0F0F0F0F0F0 ;",
      "if let Some (sv) = starting_votes . checked_add (10)",
      "{",
      "voter . votes_remaining = sv ;",
      "} else",
      "{",
      "voter . votes_remaining = u32 :: MAX ;",
      "msg ! (\"Warning: Starting votes overflowed for voter",
      "{",
      "}.\" , voter_id) ;",
      "}",
      "voter . is_eligible = starting_votes > 0 ;",
      "voter . total_votes_cast = 0 ;",
      "msg ! (\"New voter {} registered with {} votes.\" , voter . voter_id , voter . votes_remaining) ;",
      "Ok (())"
    ]
  },
  {
    "name": "cast_votes",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CastVotes >",
      "votes_to_cast_1: u32",
      "votes_to_cast_2: u32"
    ],
    "attributes": [],
    "body": [
      "let tally = & mut ctx . accounts . tally_core ;",
      "let voter1 = & mut ctx . accounts . voter1_profile ;",
      "let voter2 = & mut ctx . accounts . voter2_profile ;",
      "let votes_to_cast_v1 = votes_to_cast_1 . min (voter1 . votes_remaining) ;",
      "voter1 . votes_remaining = voter1 . votes_remaining . saturating_sub (votes_to_cast_v1) ;",
      "voter1 . total_votes_cast = voter1 . total_votes_cast . saturating_add (votes_to_cast_v1) ;",
      "tally . total_votes = tally . total_votes . saturating_add (votes_to_cast_v1 as u64) ;",
      "voter1 . is_eligible = voter1 . votes_remaining > 0 ;",
      "let votes_to_cast_v2 = votes_to_cast_2 . min (voter2 . votes_remaining) ;",
      "voter2 . votes_remaining = voter2 . votes_remaining . saturating_sub (votes_to_cast_v2) ;",
      "voter2 . total_votes_cast = voter2 . total_votes_cast . saturating_add (votes_to_cast_v2) ;",
      "tally . total_votes = tally . total_votes . saturating_add (votes_to_cast_v2 as u64) ;",
      "voter2 . is_eligible = voter2 . votes_remaining > 0 ;",
      "tally . current_voters = tally . current_voters . saturating_add ((voter1 . total_votes_cast > 0) as u32 + (voter2 . total_votes_cast > 0) as u32) ;",
      "msg ! (\"Voter 1 ({}) cast {} votes. Voter 2 ({}) cast {} votes.\" , voter1 . voter_id , votes_to_cast_v1 , voter2 . voter_id , votes_to_cast_v2) ;",
      "Ok (())"
    ]
  },
