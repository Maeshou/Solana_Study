[
  {
    "name": "list_nft",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ListNft >",
      "price: u64"
    ],
    "attributes": [
      "# [doc = \" seller_account から escrow_account へ NFT を移動して出品するが、\"]",
      "# [doc = \" 同一アカウントチェックが入っていないため、\"]",
      "# [doc = \" seller_account.key() == escrow_account.key() のまま処理が進む可能性がある\"]"
    ],
    "body": [
      "let seller = & mut ctx . accounts . seller_account ;",
      "let escrow = & mut ctx . accounts . escrow_account ;",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "let cpi_ctx = CpiContext :: new (ctx . accounts . token_program . to_account_info () , Transfer { from : ctx . accounts . seller_nft_account . to_account_info () , to : ctx . accounts . escrow_nft_account . to_account_info () , authority : ctx . accounts . seller . to_account_info () , } ,) ;",
      "anchor_spl :: token :: transfer (cpi_ctx , 1) ? ;",
      "seller . listing_count = seller . listing_count . wrapping_add (1) ;",
      "escrow . locked_nft_count = escrow . locked_nft_count . wrapping_add (1) ;",
      "seller . total_listed_value = seller . total_listed_value + price ;",
      "escrow . total_value_locked = escrow . total_value_locked + price ;",
      "seller . note = format ! (\"{}|listed@{}:{}\" , seller . note , now , price) ;",
      "escrow . note = format ! (\"{}|locked@{}\" , escrow . note , now) ;",
      "msg ! (\"User {} listed NFT at price {} lamports (listing #{})\" , ctx . accounts . seller . key () , price , seller . listing_count) ;",
      "Ok (())"
    ]
  },
