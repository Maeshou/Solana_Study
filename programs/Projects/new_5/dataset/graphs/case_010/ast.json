[
  {
    "name": "transfer_points",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < TransferPoints >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" profile_a から profile_b へポイントを移動するが、\"]",
      "# [doc = \" 同一アカウントかどうかの検証が抜けている！\"]"
    ],
    "body": [
      "let profile_a = & mut ctx . accounts . profile_a ;",
      "let profile_b = & mut ctx . accounts . profile_b ;",
      "if profile_a . points < amount",
      "{",
      "return Err (ErrorCode :: InsufficientPoints . into ()) ;",
      "}",
      "profile_a . points = profile_a . points . checked_sub (amount) . unwrap () ;",
      "profile_b . points = profile_b . points . checked_add (amount) . unwrap () ;",
      "msg ! (\"Transferred {} points from {} to {}\" , amount , profile_a . owner , profile_b . owner) ;",
      "Ok (())"
    ]
  },
  {
    "name": "TransferPoints",
    "node_type": "struct",
    "fields": [
      {
        "name": "profile_a",
        "attribute": "# [doc = \" 送信元プロファイル\"] # [account (mut)]",
        "field_type": "Account < 'info , UserProfile >"
      },
      {
        "name": "profile_b",
        "attribute": "# [doc = \" 送信先プロファイル\"] # [account (mut)]",
        "field_type": "Account < 'info , UserProfile >"
      },
      {
        "name": "user",
