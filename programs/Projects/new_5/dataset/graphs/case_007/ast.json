[
  {
    "name": "shift_rewards",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ShiftRewards >",
      "reward_amount: u64"
    ],
    "attributes": [
      "# [doc = \" from_acc から to_acc へ報酬を移動するが、\"]",
      "# [doc = \" 両者が同一アカウントかどうかをチェックしていない！\"]"
    ],
    "body": [
      "let from_acc = & mut ctx . accounts . from_acc ;",
      "let to_acc = & mut ctx . accounts . to_acc ;",
      "from_acc . rewards = from_acc . rewards . checked_sub (reward_amount) . unwrap () ;",
      "to_acc . rewards = to_acc . rewards . checked_add (reward_amount) . unwrap () ;",
      "msg ! (\"{} rewards shifted from {} to {}\" , reward_amount , from_acc . user , to_acc . user) ;",
      "Ok (())"
    ]
  },
  {
    "name": "ShiftRewards",
    "node_type": "struct",
    "fields": [
      {
        "name": "from_acc",
        "attribute": "# [doc = \" 送信元アカウント（mutable）\"] # [account (mut)]",
        "field_type": "Account < 'info , RewardAccount >"
      },
      {
        "name": "to_acc",
        "attribute": "# [doc = \" 送信先アカウント（mutable）\"] # [account (mut)]",
        "field_type": "Account < 'info , RewardAccount >"
      },
      {
        "name": "admin",
        "attribute": "# [doc = \" 管理者としての署名者\"] # [account (signer)]",
        "field_type": "Signer < 'info >"
      },
      {
        "name": "system_program",
        "attribute": "# [doc = \" システムプログラム\"]",
        "field_type": "Program < 'info , System >"
      }
    ],
