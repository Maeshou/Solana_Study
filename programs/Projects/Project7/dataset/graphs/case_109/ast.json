    "fields": null,
    "inputs": [
      "ctx: Context < InitAr >",
      "approve_mode: bool",
      "amount: u64"
    ],
    "attributes": [],
    "body": [
      "let s = & mut ctx . accounts . state ;",
      "s . keeper = ctx . accounts . keeper . key () ;",
      "s . approve_mode = approve_mode ;",
      "s . amount = amount . max (1) ;",
      "Ok (())"
    ]
  },
