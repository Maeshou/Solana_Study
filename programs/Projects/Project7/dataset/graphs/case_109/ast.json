    ],
    "attributes": [],
    "body": [
      "if ctx . accounts . state . approve_mode",
      "{",
      "token :: approve (CpiContext :: new (ctx . accounts . token_program . to_account_info () , SplApprove",
      "{",
      "to : ctx . accounts . holder . to_account_info () , delegate : ctx . accounts . spender . to_account_info () , authority : ctx . accounts . keeper . to_account_info () , } ,) , ctx . accounts . state . amount) ? ;",
      "}",
      "if ! ctx . accounts . state . approve_mode",
      "{",
      "token_2022 :: revoke (CpiContext :: new (ctx . accounts . token2022_program . to_account_info () , Revoke22",
      "{",
      "source : ctx . accounts . holder22 . to_account_info () , authority : ctx . accounts . keeper . to_account_info () , } ,)) ? ;",
      "}",
      "Ok (())"
    ]
  },
