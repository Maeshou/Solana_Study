  {
    "name": "initialize_threshold",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeThreshold >",
      "minimum_balance: u64"
    ],
    "attributes": [],
    "body": [
      "let threshold_state = & mut ctx . accounts . threshold_state ;",
      "threshold_state . owner = ctx . accounts . owner . key () ;",
      "threshold_state . minimum_balance = minimum_balance ;",
      "Ok (())"
    ]
  },
  {
