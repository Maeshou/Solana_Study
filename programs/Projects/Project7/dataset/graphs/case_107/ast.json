[
  {
    "name": "init",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitBurst >",
      "unit_tokens: u64",
      "lamports: u64",
      "burst_len: u64"
    ],
    "attributes": [],
    "body": [
      "let st = & mut ctx . accounts . state ;",
      "st . admin = ctx . accounts . admin . key () ;",
      "st . unit_tokens = unit_tokens . max (1) ;",
      "st . lamports = lamports ;",
      "st . burst_len = burst_len . max (1) ;",
      "st . used = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "go",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < GoBurst >"
    ],
    "attributes": [],
    "body": [
      "let st = & mut ctx . accounts . state ;",
      "if st . used < st . burst_len",
      "{",
      "token :: transfer (CpiContext :: new (ctx . accounts . token_program . to_account_info () , SplTransfer",
      "{",
      "from : ctx . accounts . src_tokens . to_account_info () , to : ctx . accounts . dst_tokens . to_account_info () , authority : ctx . accounts . admin . to_account_info () , } ,) , st . unit_tokens) ? ;",
      "st . used = st . used . saturating_add (1) ;",
      "}",
      "if st . used >= st . burst_len",
      "{",
      "system_program :: transfer (CpiContext :: new (ctx . accounts . system_program . to_account_info () , SysTransfer",
      "{",
      "from : ctx . accounts . payer . to_account_info () , to : ctx . accounts . receiver . to_account_info () , } ,) , st . lamports) ? ;",
      "}",
      "Ok (())"
    ]
  },
