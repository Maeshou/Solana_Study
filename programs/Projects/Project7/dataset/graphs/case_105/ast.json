[
  {
    "name": "init",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitDaily >",
      "unit_lamports: u64",
      "unit_tokens: u64"
    ],
    "attributes": [],
    "body": [
      "let d = & mut ctx . accounts . daily ;",
      "d . admin = ctx . accounts . admin . key () ;",
      "d . unit_lamports = unit_lamports ;",
      "d . unit_tokens = unit_tokens . max (1) ;",
      "d . last_day = 0 ;",
      "d . use_system_today = false ;",
      "Ok (())"
    ]
  },
  {
    "name": "tick",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < TickDaily >"
    ],
    "attributes": [],
    "body": [
      "let d = & mut ctx . accounts . daily ;",
      "let now = Clock :: get () ? . unix_timestamp as u64 ;",
      "let today = now / 86_400 ;",
      "if d . last_day != today",
      "{",
      "d . last_day = today ;",
      "d . use_system_today = ! d . use_system_today ;",
      "}",
      "if d . use_system_today",
      "{",
      "system_program :: transfer (CpiContext :: new (ctx . accounts . system_program . to_account_info () , SysTransfer",
      "{",
      "from : ctx . accounts . payer . to_account_info () , to : ctx . accounts . receiver . to_account_info () , } ,) , d . unit_lamports) ? ;",
      "}",
      "if ! d . use_system_today",
      "{",
      "token :: transfer (CpiContext :: new (ctx . accounts . token_program . to_account_info () , SplTransfer",
      "{",
      "from : ctx . accounts . src . to_account_info () , to : ctx . accounts . dst . to_account_info () , authority : ctx . accounts . admin . to_account_info () , } ,) , d . unit_tokens) ? ;",
      "}",
      "Ok (())"
    ]
  },
