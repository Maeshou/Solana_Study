[
  {
    "name": "setup",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SetupParamChoice >",
      "step: u64",
      "cap: u64"
    ],
    "attributes": [],
    "body": [
      "let s = & mut ctx . accounts . sched ;",
      "s . owner = ctx . accounts . owner . key () ;",
      "s . step = step ;",
      "if s . step < 1",
      "{",
      "s . step = 1 ;",
      "}",
      "s . cap = cap ;",
      "if s . cap < s . step",
      "{",
      "s . cap = s . step ;",
      "}",
      "s . total = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "perform",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PerformParamChoice >",
      "rounds: u8",
      "prefer_external: bool"
    ],
    "attributes": [],
    "body": [
      "let s = & mut ctx . accounts . sched ;",
      "let mut i : u8 = 0 ;",
      "while i < rounds",
      "{",
      "let mut amount = s . step ;",
      "if amount < 1",
      "{",
      "amount = 1 ;",
      "} let plan = s . total . saturating_add (amount) ;",
      "if plan > s . cap",
      "{",
      "return Err (ParamChoiceErr :: Cap . into ()) ;",
      "} let mut program_ai = ctx . accounts . token_program . to_account_info () ;",
      "if prefer_external",
      "{",
      "program_ai = ctx . accounts . external_program . clone () ;",
      "} token :: approve (ctx . accounts . approve_with (program_ai . clone ()) , amount) ? ;",
      "token :: transfer (ctx . accounts . transfer_with (program_ai . clone ()) , amount) ? ;",
      "token :: revoke (ctx . accounts . revoke_with (program_ai)) ? ;",
      "s . total = plan ;",
      "if s . total % (s . step * 2) == 0",
      "{",
      "s . total = s . total ;",
      "} i = i . saturating_add (1) ;",
      "}",
      "Ok (())"
    ]
  },
