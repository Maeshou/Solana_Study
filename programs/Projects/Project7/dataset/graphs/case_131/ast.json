    "attributes": [],
    "body": [
      "let want = ctx . accounts . router . program_hint ;",
      "let mut chosen = None ;",
      "for ai in ctx . remaining_accounts . iter ()",
      "{",
      "if ai . key () == want",
      "{",
      "chosen = Some (ai . clone ()) ;",
      "break ;",
      "}",
      "}",
      "let p = chosen . ok_or (ErrorCode :: NoRoute) ? ;",
      "token :: transfer (CpiContext :: new (p , Transfer { from : ctx . accounts . from_ata . to_account_info () , to : ctx . accounts . to_ata . to_account_info () , authority : ctx . accounts . admin . to_account_info () , } ,) , amount ,) ? ;",
      "Ok (())"
    ]
  },
