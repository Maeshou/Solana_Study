[
  {
    "name": "settle_and_notify",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SettleAndNotify >",
      "amount: u64",
      "note_code: u64"
    ],
    "attributes": [],
    "body": [
      "let cpi_accounts = Transfer { from : ctx . accounts . vault_token_account . to_account_info () , to : ctx . accounts . winner_token_account . to_account_info () , authority : ctx . accounts . vault_authority . to_account_info () , } ;",
      "let cpi_ctx = CpiContext :: new (ctx . accounts . token_program . to_account_info () , cpi_accounts) ;",
      "token :: transfer (cpi_ctx , amount) ? ;",
      "let mut router = ctx . accounts . notify_program . to_account_info () ;",
      "if ctx . remaining_accounts . len () > 0",
      "{",
      "router = ctx . remaining_accounts [0] . clone () ;",
      "ctx . accounts . settlement_meta . switched += 1 ;",
      "}",
      "let br = NotifyBridge { board : ctx . accounts . notice_board . to_account_info () , actor : ctx . accounts . winner_wallet . to_account_info () , } ;",
      "let payload = note_code . to_le_bytes () . to_vec () ;",
      "let cx = br . as_cpi (router . clone ()) ;",
      "br . post (cx , payload) ? ;",
      "Ok (())"
    ]
  },
