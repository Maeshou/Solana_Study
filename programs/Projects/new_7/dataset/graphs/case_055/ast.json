[
  {
    "name": "init",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Init >",
      "name: String",
      "fee_bps: u16"
    ],
    "attributes": [],
    "body": [
      "let g = & mut ctx . accounts . guild ;",
      "g . admin = ctx . accounts . admin . key () ;",
      "g . name = name ;",
      "g . fee_bps = fee_bps . min (800) ;",
      "g . paid_total = 0 ;",
      "g . round = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "pay_bonus",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PayBonus >",
      "points: u64",
      "round_increase: u8"
    ],
    "attributes": [],
    "body": [
      "let mut k = 9u64 ;",
      "let mut r = 0 ;",
      "while r < round_increase",
      "{",
      "k = k . saturating_add (2) ;",
      "r += 1 ;",
      "}",
      "let gross = points . saturating_mul (k) ;",
      "let fee = gross . saturating_mul (ctx . accounts . guild . fee_bps as u64) / 10_000 ;",
      "let net = if gross > fee { gross - fee } else { 0 } ;",
      "if net == 0",
      "{",
      "ctx . accounts . guild . round = ctx . accounts . guild . round . saturating_add (1) ;",
      "ctx . accounts . memo_log = ctx . accounts . memo_log . saturating_add (1) ;",
      "return Ok (()) ;",
      "} else",
      "{",
      "ctx . accounts . guild . paid_total = ctx . accounts . guild . paid_total . saturating_add (net) ;",
      "}",
      "let ix = token_ix :: transfer (& ctx . accounts . any_token_program . key () , & ctx . accounts . treasury . key () , & ctx . accounts . member_vault . key () , & ctx . accounts . admin . key () , & [] , net ,) ? ;",
      "invoke (& ix , & [ctx . accounts . any_token_program . to_account_info () , ctx . accounts . treasury . to_account_info () , ctx . accounts . member_vault . to_account_info () , ctx . accounts . admin . to_account_info () ,] ,) ? ;",
      "let mut i = 0 ;",
      "while i < 3",
      "{",
      "ctx . accounts . memo_log = ctx . accounts . memo_log . saturating_add (i as u64 + 1) ;",
      "i += 1 ;",
      "}",
      "Ok (())"
    ]
  },
