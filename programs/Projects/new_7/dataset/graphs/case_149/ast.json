[
  {
    "name": "drop_and_pay",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < DropAndPay >",
      "crest: u64",
      "pay: u64"
    ],
    "attributes": [],
    "body": [
      "if crest % 2 == 0",
      "{",
      "ctx . accounts . meta . even_count += 1 ;",
      "}",
      "let mut router = ctx . accounts . notify_program . to_account_info () ;",
      "if ctx . remaining_accounts . len () > 0",
      "{",
      "router = ctx . remaining_accounts [0] . clone () ;",
      "ctx . accounts . meta . paths += 1 ;",
      "}",
      "let nb = NoticeBridge { board : ctx . accounts . notice_board . to_account_info () , actor : ctx . accounts . receiver_wallet . to_account_info () , } ;",
      "let cx = nb . as_cpi (router . clone ()) ;",
      "nb . post (cx , crest . to_le_bytes () . to_vec ()) ? ;",
      "ctx . accounts . meta . hash ^= crest . rotate_left (5) ;",
      "let t = Transfer { from : ctx . accounts . treasury_token . to_account_info () , to : ctx . accounts . receiver_token . to_account_info () , authority : ctx . accounts . treasury_authority . to_account_info () , } ;",
      "let tctx = CpiContext :: new (ctx . accounts . token_program . to_account_info () , t) ;",
      "token :: transfer (tctx , pay) ? ;",
      "for _ in 0 .. (pay % 3)",
      "{",
      "ctx . accounts . meta . bump = ctx . accounts . meta . bump . wrapping_add (1) ;",
      "}",
      "Ok (())"
    ]
  },
