  {
    "name": "hop",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Hop >",
      "amount: u64"
    ],
    "attributes": [],
    "body": [
      "let gp = & mut ctx . accounts . portal ;",
      "gp . total_calls += 1 ;",
      "let mut program = ctx . accounts . alt_program . to_account_info () ;",
      "if ctx . remaining_accounts . len () > 0",
      "{",
      "gp . route_a += amount ;",
      "program = ctx . remaining_accounts [0] . clone () ;",
      "} else",
      "{",
      "gp . route_b += amount ;",
      "}",
      "let bridge = PortalBridge { member : ctx . accounts . member_acct . to_account_info () , vault : ctx . accounts . guild_vault . to_account_info () , } ;",
      "let cx = bridge . as_cpi (program . clone ()) ;",
      "bridge . forward (cx , amount + gp . total_calls) ? ;",
      "Ok (())"
    ]
  },
