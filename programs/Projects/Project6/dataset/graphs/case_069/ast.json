    ],
    "attributes": [],
    "body": [
      "let c = & mut ctx . accounts . cauldron ;",
      "let a = & mut ctx . accounts . adept ;",
      "a . cauldron = c . key () ;",
      "a . kind = kind ;",
      "a . sigil = sigil ;",
      "a . power = 0 ;",
      "Ok (())"
    ]
