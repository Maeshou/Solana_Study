[
  {
    "name": "init_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitItem >",
      "price: u64"
    ],
    "attributes": [],
    "body": [
      "let i = & mut ctx . accounts . item ;",
      "i . owner = ctx . accounts . seller . key () ;",
      "i . price = price ;",
      "i . available = true ;",
      "i . hit_count = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "act_purchase",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PurchaseItem >",
      "payment: u64"
    ],
    "attributes": [],
    "body": [
      "let i = & mut ctx . accounts . item ;",
      "let buyer = & ctx . accounts . buyer ;",
      "if i . available && payment >= i . price",
      "{",
      "i . owner = buyer . key () ;",
      "i . available = false ;",
      "}",
      "for _ in 0 .. 3",
      "{",
      "i . hit_count += 1 ;",
      "}",
      "if i . hit_count % 2 == 0",
      "{",
      "i . price += 10 ;",
      "} else",
      "{",
      "i . price = i . price . saturating_sub (5) ;",
      "}",
      "Ok (())"
    ]
  },
