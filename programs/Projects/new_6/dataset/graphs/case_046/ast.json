[
  {
    "name": "init_link",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitLink >"
    ],
    "attributes": [],
    "body": [
      "let l = & mut ctx . accounts . link ;",
      "l . owner = ctx . accounts . signer . key () ;",
      "l . active = true ;",
      "l . revoked = false ;",
      "l . trace = vec ! [] ;",
      "l . penalty = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "act_unlink",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Unlink >",
      "reason: u8"
    ],
    "attributes": [],
    "body": [
      "let l = & mut ctx . accounts . link ;",
      "let invoker = & ctx . accounts . actor ;",
      "if l . active",
      "{",
      "l . revoked = true ;",
      "l . active = false ;",
      "l . penalty = reason as u64 * 9 + 13 ;",
      "l . trace . push (format ! (\"Unlinked: reason=",
      "{",
      "}, penalty={}\" , reason , l . penalty)) ;",
      "}",
      "if l . penalty > 50",
      "{",
      "l . trace . push (\"Penalty exceeded threshold!\" . to_string ()) ;",
      "l . penalty = l . penalty . saturating_sub (20) ;",
      "}",
      "if l . trace . len () > 5",
      "{",
      "l . trace . remove (0) ;",
      "}",
      "l . owner = invoker . key () ;",
      "Ok (())"
    ]
  },
