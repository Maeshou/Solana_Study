[
  {
    "name": "init_quest",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitQuest >",
      "difficulty: u8"
    ],
    "attributes": [],
    "body": [
      "let quest = & mut ctx . accounts . quest ;",
      "quest . giver = ctx . accounts . giver . key () ;",
      "quest . difficulty = difficulty ;",
      "quest . result = None ;",
      "Ok (())"
    ]
  },
  {
    "name": "report_result",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ReportResult >",
      "passed: bool"
    ],
    "attributes": [],
    "body": [
      "let quest = & mut ctx . accounts . quest ;",
      "let actor = & mut ctx . accounts . actor ;",
      "if passed",
      "{",
      "quest . result = Some (100 + quest . difficulty as u32) ;",
      "actor . exp += 10 ;",
      "} else",
      "{",
      "quest . result = Some (0) ;",
      "actor . exp = actor . exp . saturating_sub (5) ;",
      "}",
      "Ok (())"
    ]
  },
