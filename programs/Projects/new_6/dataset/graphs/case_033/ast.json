[
  {
    "name": "init_submission",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitSubmission >",
      "category: u8",
      "priority: u32"
    ],
    "attributes": [],
    "body": [
      "let s = & mut ctx . accounts . submission ;",
      "s . creator = ctx . accounts . creator . key () ;",
      "s . category = category ;",
      "s . status = ReviewStatus :: Pending ;",
      "s . priority = priority ;",
      "s . round = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "act_review",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ReviewContent >",
      "accept: bool"
    ],
    "attributes": [],
    "body": [
      "let s = & mut ctx . accounts . submission ;",
      "let reviewer = & ctx . accounts . reviewer ;",
      "for _ in 0 .. 3",
      "{",
      "s . round += 1 ;",
      "if accept",
      "{",
      "if s . priority < 100 { s . priority += 10 ;",
      "} } else",
      "{",
      "if s . priority > 10 { s . priority -= 5 ;",
      "} }",
      "}",
      "if s . priority >= 90",
      "{",
      "s . status = ReviewStatus :: Approved ;",
      "} else if s . round > 5",
      "{",
      "s . status = ReviewStatus :: Rejected ;",
      "}",
      "msg ! (\"Reviewed by: {}\" , reviewer . key ()) ;",
      "Ok (())"
    ]
  },
