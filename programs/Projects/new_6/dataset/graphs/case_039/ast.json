[
  {
    "name": "init_mission",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitMission >"
    ],
    "attributes": [],
    "body": [
      "let m = & mut ctx . accounts . mission ;",
      "m . player = ctx . accounts . user . key () ;",
      "m . progress = vec ! [false ; 10] ;",
      "m . state = 0 ;",
      "m . mask = 0b00000000 ;",
      "m . rating = 1 ;",
      "Ok (())"
    ]
  },
  {
    "name": "act_step",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < StepMission >",
      "steps: u8"
    ],
    "attributes": [],
    "body": [
      "let m = & mut ctx . accounts . mission ;",
      "let actor = & ctx . accounts . actor ;",
      "for i in 0 .. steps",
      "{",
      "let idx = (i % 10) as usize ;",
      "m . progress [idx] = true ;",
      "m . mask |= 1 << idx ;",
      "}",
      "if m . mask & 0b11111111 == 0b11111111",
      "{",
      "m . state = 1 ;",
      "m . rating = (m . rating * 3) % 7 ;",
      "m . progress . reverse () ;",
      "}",
      "m . player = actor . key () ;",
      "Ok (())"
    ]
  },
