  {
    "name": "init_guild",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitGuild >",
      "name: String",
      "max_members: u32"
    ],
    "attributes": [],
    "body": [
      "let guild = & mut ctx . accounts . guild ;",
      "guild . name = name ;",
      "guild . admin = ctx . accounts . admin . key () ;",
      "guild . max_members = max_members ;",
      "guild . member_count = 1 ;",
      "guild . treasury_balance = 0 ;",
      "Ok (())"
    ]
  },
  {
