[
  {
    "name": "init_leaderboard",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitBoard >",
      "s1: u32",
      "s2: u32",
      "s3: u32"
    ],
    "attributes": [
      "# [doc = \" リーダーボードを初期化\"]"
    ],
    "body": [
      "let board = & mut ctx . accounts . board ;",
      "let mut arr = [s1 , s2 , s3] ;",
      "for i in 0 .. 3",
      "{",
      "for j in 0 .. 2",
      "{",
      "if arr [j] < arr [j + 1] { let tmp = arr [j] ;",
      "arr [j] = arr [j + 1] ;",
      "arr [j + 1] = tmp ;",
      "} }",
      "}",
      "board . top1 = arr [0] ;",
      "board . top2 = arr [1] ;",
      "board . top3 = arr [2] ;",
      "Ok (())"
    ]
  },
  {
    "name": "submit_score",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SubmitScore >",
      "score: u32"
    ],
    "attributes": [
      "# [doc = \" 新スコアを投稿し、必要に応じて更新\"]"
    ],
    "body": [
      "let b = & mut ctx . accounts . board ;",
      "if score > b . top3",
      "{",
      "b . top3 = score ;",
      "if b . top3 > b . top2",
      "{",
      "let tmp = b . top2 ;",
      "b . top2 = b . top3 ;",
      "b . top3 = tmp ;",
      "if b . top2 > b . top1",
      "{",
      "let tmp2 = b . top1 ;",
      "b . top1 = b . top2 ;",
      "b . top2 = tmp2 ;",
      "} }",
      "}",
      "Ok (())"
    ]
  },
