[
  {
    "name": "init_health",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitHealth >",
      "temp_sum: u32",
      "readings: u32"
    ],
    "attributes": [],
    "body": [
      "let d = & mut ctx . accounts . health ;",
      "d . temp_sum = temp_sum ;",
      "d . readings = readings ;",
      "d . overheat = false ;",
      "let avg = d . temp_sum / (d . readings . max (1)) ;",
      "if avg > 75",
      "{",
      "d . overheat = true ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "add_reading",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddReading >",
      "temp: u32"
    ],
    "attributes": [],
    "body": [
      "let d = & mut ctx . accounts . health ;",
      "d . temp_sum = d . temp_sum . saturating_add (temp) ;",
      "d . readings = d . readings . saturating_add (1) ;",
      "let avg = d . temp_sum / d . readings ;",
      "if avg > 80",
      "{",
      "d . overheat = true ;",
      "} else",
      "{",
      "d . overheat = false ;",
      "}",
      "Ok (())"
    ]
  },
