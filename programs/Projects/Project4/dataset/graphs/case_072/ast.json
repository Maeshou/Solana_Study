[
  {
    "name": "init_battery",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitBattery >",
      "cycles: u32"
    ],
    "attributes": [],
    "body": [
      "let b = & mut ctx . accounts . battery ;",
      "b . charge_level = 100 ;",
      "b . cycles = cycles ;",
      "b . health_flag = false ;",
      "let mut degrade = 0u32 ;",
      "if cycles > 1000",
      "{",
      "degrade = 20 ;",
      "} else",
      "{",
      "degrade = 5 ;",
      "}",
      "b . charge_level = b . charge_level . saturating_sub (degrade) ;",
      "if degrade > 10",
      "{",
      "b . health_flag = true ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "discharge",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Discharge >",
      "amount: u32"
    ],
    "attributes": [],
    "body": [
      "let b = & mut ctx . accounts . battery ;",
      "if amount > 50",
      "{",
      "b . charge_level = b . charge_level . saturating_sub (30) ;",
      "}",
      "b . charge_level = b . charge_level . saturating_sub (amount . min (b . charge_level)) ;",
      "if b . charge_level < 20",
      "{",
      "b . health_flag = true ;",
      "}",
      "Ok (())"
    ]
  },
