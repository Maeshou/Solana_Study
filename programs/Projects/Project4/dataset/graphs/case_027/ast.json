[
  {
    "name": "add_stock",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddStock >",
      "amount: u32"
    ],
    "attributes": [],
    "body": [
      "let stock = & mut ctx . accounts . stock ;",
      "stock . level += amount ;",
      "stock . total_added += amount ;",
      "if stock . level > stock . alert_threshold",
      "{",
      "stock . alert = true ;",
      "} else",
      "{",
      "stock . alert = false ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "consume_stock",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ConsumeStock >",
      "want: u32"
    ],
    "attributes": [],
    "body": [
      "let st = & mut ctx . accounts . stock ;",
      "let mut consumed = 0 ;",
      "let mut i = 0 ;",
      "while i < want",
      "{",
      "if st . level == 0",
      "{",
      "break ;",
      "} st . level -= 1 ;",
      "consumed += 1 ;",
      "i += 1 ;",
      "}",
      "st . last_consumed = consumed ;",
      "st . shortage = want - consumed ;",
      "Ok (())"
    ]
  },
