  {
    "name": "init_bonus",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitBonus >",
      "base_score: u32"
    ],
    "attributes": [
      "# [doc = \" ボーナス設定を初期化\"]"
    ],
    "body": [
      "let b = & mut ctx . accounts . bonus ;",
      "b . base = base_score ;",
      "b . bonus = 0 ;",
      "b . total = base_score ;",
      "Ok (())"
    ]
  },
  {
    "name": "apply_bonus",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ApplyBonus >",
      "multiplier: u8"
    ],
    "attributes": [
      "# [doc = \" ボーナスを累積しフラグ設定\"]"
    ],
    "body": [
      "let b = & mut ctx . accounts . bonus ;",
      "let mut i = 0 ;",
      "while i < multiplier",
      "{",
      "b . bonus += b . base / 10 ;",
      "i += 1 ;",
      "}",
      "b . total = b . base + b . bonus ;",
      "b . flag = b . total > b . base * 2 ;",
      "Ok (())"
    ]
  },
