[
  {
    "name": "init_tasks",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitTasks >",
      "total: u32",
      "done: u32"
    ],
    "attributes": [
      "# [doc = \" タスク総数と完了数を初期化\"]"
    ],
    "body": [
      "let t = & mut ctx . accounts . tasks ;",
      "t . total = total ;",
      "t . done = done . min (total) ;",
      "t . pending = t . total - t . done ;",
      "Ok (())"
    ]
  },
  {
    "name": "complete",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Complete >",
      "count: u32"
    ],
    "attributes": [
      "# [doc = \" タスク完了を登録\"]"
    ],
    "body": [
      "let t = & mut ctx . accounts . tasks ;",
      "let avail = t . total - t . done ;",
      "let to_mark = count . min (avail) ;",
      "let mut i = 0 ;",
      "while i < to_mark",
      "{",
      "t . done += 1 ;",
      "i += 1 ;",
      "}",
      "t . pending = t . total - t . done ;",
      "Ok (())"
    ]
  },
