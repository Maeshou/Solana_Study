[
  {
    "name": "init_metrics",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitMetrics >",
      "hits: u32",
      "misses: u32"
    ],
    "attributes": [
      "# [doc = \" メトリックを初期化\"]"
    ],
    "body": [
      "let m = & mut ctx . accounts . metrics ;",
      "m . hits = hits ;",
      "m . misses = misses ;",
      "let total = hits + misses ;",
      "m . accuracy = if total == 0 { 0 } else { (hits * 100 / total) as u8 } ;",
      "Ok (())"
    ]
  },
  {
    "name": "record",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Record >",
      "success: bool"
    ],
    "attributes": [
      "# [doc = \" 成否を記録\"]"
    ],
    "body": [
      "let m = & mut ctx . accounts . metrics ;",
      "if success",
      "{",
      "m . hits += 1 ;",
      "} else",
      "{",
      "m . misses += 1 ;",
      "}",
      "let total = m . hits + m . misses ;",
      "m . accuracy = (m . hits * 100 / total) as u8 ;",
      "Ok (())"
    ]
  },
