[
  {
    "name": "init_inventory",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitInventory >",
      "initial: u32",
      "threshold: u32"
    ],
    "attributes": [],
    "body": [
      "let stock = & mut ctx . accounts . stock ;",
      "stock . level = 0 ;",
      "for _ in 0 .. initial",
      "{",
      "stock . level += 1 ;",
      "}",
      "let thresh = & mut ctx . accounts . threshold ;",
      "thresh . value = threshold ;",
      "let log = & mut ctx . accounts . alert_log ;",
      "log . count = if stock . level > threshold { stock . level - threshold } else { 0 } ;",
      "log . over = stock . level > threshold ;",
      "Ok (())"
    ]
  },
  {
    "name": "adjust_stock",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AdjustStock >",
      "change: i32"
    ],
    "attributes": [],
    "body": [
      "let stock = & mut ctx . accounts . stock ;",
      "if change >= 0",
      "{",
      "stock . level = stock . level . saturating_add (change as u32) ;",
      "} else",
      "{",
      "stock . level = stock . level . saturating_sub ((- change) as u32) ;",
      "}",
      "let log = & mut ctx . accounts . alert_log ;",
      "log . count = if stock . level > ctx . accounts . threshold . value { stock . level - ctx . accounts . threshold . value } else { 0 } ;",
      "log . over = stock . level > ctx . accounts . threshold . value ;",
      "Ok (())"
    ]
  },
