  {
    "name": "consume",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Consume >",
      "amount: u32"
    ],
    "attributes": [],
    "body": [
      "let mut left = ctx . accounts . stock . quantity ;",
      "let mut to_take = amount ;",
      "while to_take > 0",
      "{",
      "if left == 0",
      "{",
      "break ;",
      "} left -= 1 ;",
      "to_take -= 1 ;",
      "}",
      "let c = & mut ctx . accounts . consumption ;",
      "c . taken = amount - to_take ;",
      "Ok (())"
    ]
  },
