[
  {
    "name": "create_room",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateRoom >",
      "topic: String"
    ],
    "attributes": [],
    "body": [
      "let now = Clock :: get () ? . unix_timestamp ;",
      "let rm = & mut ctx . accounts . room ;",
      "rm . topic = topic ;",
      "rm . count = 0 ;",
      "rm . created_at = now ;",
      "Ok (())"
    ]
  },
  {
    "name": "post_message",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PostMessage >",
      "msg: String"
    ],
    "attributes": [],
    "body": [
      "let rm = & mut ctx . accounts . room ;",
      "if msg . len () > 0",
      "{",
      "rm . count += 1 ;",
      "rm . last_message = msg . clone () ;",
      "rm . last_posted_at = Clock :: get () ? . unix_timestamp ;",
      "}",
      "Ok (())"
    ]
  },
