[
  {
    "name": "register_sensor",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RegisterSensor >",
      "readings: Vec < u32 >"
    ],
    "attributes": [],
    "body": [
      "let mut sum = 0u32 ;",
      "let mut count = 0u32 ;",
      "let mut max = 0u32 ;",
      "for & r in readings . iter ()",
      "{",
      "if r > 0",
      "{",
      "sum += r ;",
      "count += 1 ;",
      "if r > max",
      "{",
      "max = r ;",
      "} }",
      "}",
      "let avg = if count > 0 { sum / count } else { 0 } ;",
      "let sensor = & mut ctx . accounts . sensor ;",
      "sensor . total = sum ;",
      "sensor . count = count ;",
      "sensor . max = max ;",
      "sensor . avg = avg ;",
      "Ok (())"
    ]
  },
  {
    "name": "reset_sensor",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ResetSensor >"
    ],
    "attributes": [],
    "body": [
      "let sensor = & mut ctx . accounts . sensor ;",
      "sensor . total = 0 ;",
      "sensor . count = 0 ;",
      "sensor . max = 0 ;",
      "sensor . avg = 0 ;",
      "sensor . last_reset = Clock :: get () ? . unix_timestamp ;",
      "Ok (())"
    ]
  },
