[
  {
    "name": "init_memory",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitMemory >",
      "total: u32"
    ],
    "attributes": [],
    "body": [
      "let m = & mut ctx . accounts . memory ;",
      "m . total_mem = total ;",
      "m . used_mem = 0 ;",
      "m . mem_ok_flag = false ;",
      "let rate = if total > 0 { m . used_mem * 100 / total } else { 0 } ;",
      "if rate < 80",
      "{",
      "m . mem_ok_flag = true ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "allocate_mem",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AllocateMem >",
      "amount: u32"
    ],
    "attributes": [],
    "body": [
      "let m = & mut ctx . accounts . memory ;",
      "m . used_mem = m . used_mem . saturating_add (amount . min (m . total_mem - m . used_mem)) ;",
      "let rate = if m . total_mem > 0 { m . used_mem * 100 / m . total_mem } else { 0 } ;",
      "if rate >= 90",
      "{",
      "m . mem_ok_flag = false ;",
      "} else",
      "{",
      "m . mem_ok_flag = true ;",
      "}",
      "Ok (())"
    ]
  },
