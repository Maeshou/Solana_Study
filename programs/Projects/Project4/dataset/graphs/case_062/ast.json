  {
    "name": "init_poll",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPoll >",
      "votes_a: u32",
      "votes_b: u32"
    ],
    "attributes": [],
    "body": [
      "let poll = & mut ctx . accounts . poll ;",
      "poll . total = votes_a + votes_b ;",
      "let count_a = & mut ctx . accounts . count_a ;",
      "count_a . votes = votes_a ;",
      "if votes_a % 2 == 0",
      "{",
      "count_a . votes += 2 ;",
      "}",
      "let count_b = & mut ctx . accounts . count_b ;",
      "count_b . votes = votes_b ;",
      "if votes_b % 2 == 1",
      "{",
      "count_b . votes += 1 ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "cast_vote",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CastVote >",
      "vote_for_a: bool"
    ],
    "attributes": [],
    "body": [
      "let poll = & mut ctx . accounts . poll ;",
      "if vote_for_a",
      "{",
      "ctx . accounts . count_a . votes += 1 ;",
      "} else",
      "{",
      "ctx . accounts . count_b . votes += 1 ;",
      "}",
      "poll . total += 1 ;",
      "Ok (())"
    ]
  },
