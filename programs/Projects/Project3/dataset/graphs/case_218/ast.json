[
  {
    "name": "initialize_board",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeBoard >",
      "bump: u8"
    ],
    "attributes": [
      "# [doc = \" ボードアカウントを初期化\"]"
    ],
    "body": [
      "let board = & mut ctx . accounts . board ;",
      "board . owner = * ctx . accounts . owner . key ;",
      "board . bump = bump ;",
      "board . message = String :: new () ;",
      "Ok (())"
    ]
  },
  {
    "name": "post_message",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PostMessage >",
      "bump: u8",
      "new_message: String"
    ],
    "attributes": [
      "# [doc = \" メッセージを投稿（最大280文字）\"]"
    ],
    "body": [
      "require ! (new_message . len () <= 280 , ErrorCode :: MessageTooLong) ;",
      "let board = & mut ctx . accounts . board ;",
      "board . message = new_message ;",
      "Ok (())"
    ]
  },
  {
    "name": "clear_message",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ClearMessage >"
    ],
    "attributes": [
      "# [doc = \" メッセージをクリア\"]"
    ],
    "body": [
      "let board = & mut ctx . accounts . board ;",
      "board . message . clear () ;",
      "Ok (())"
    ]
  },
