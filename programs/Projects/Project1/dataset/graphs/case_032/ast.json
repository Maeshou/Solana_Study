[
  {
    "name": "update_value",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Ctx003 >",
      "input: u64"
    ],
    "attributes": [],
    "body": [
      "let prev = ctx . accounts . storage . last_value ;",
      "let diff = if input > prev { input - prev } else { prev - input } ;",
      "ctx . accounts . storage . delta = diff ;",
      "ctx . accounts . storage . last_value = input ;",
      "Ok (())"
    ]
  },
