[
  {
    "name": "set_unlock_time",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Ctx003 >",
      "unlock_unix_time: u64"
    ],
    "attributes": [],
    "body": [
      "require ! (ctx . accounts . authority . is_signer , CustomError :: Unauthorized) ;",
      "ctx . accounts . storage . data = unlock_unix_time ;",
      "msg ! (\"Unlock time set to {}\" , unlock_unix_time) ;",
      "Ok (())"
    ]
  },
  {
    "name": "perform_unlocked_action",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Ctx003 >"
    ],
    "attributes": [],
    "body": [
      "let current_time = Clock :: get () ? . unix_timestamp as u64 ;",
      "let unlock_time = ctx . accounts . storage . data ;",
      "require ! (current_time >= unlock_time , CustomError :: NotYetUnlocked) ;",
      "msg ! (\"Action permitted. Current: {}, Unlock: {}\" , current_time , unlock_time) ;",
      "Ok (())"
    ]
  },
  {
    "name": "check_status",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Ctx003 >"
    ],
    "attributes": [],
    "body": [
      "let current_time = Clock :: get () ? . unix_timestamp as u64 ;",
      "let unlock_time = ctx . accounts . storage . data ;",
      "let status = if current_time >= unlock_time { \"UNLOCKED\" } else { \"LOCKED\" } ;",
      "msg ! (\"Status: {} | Now: {}, Unlock Time: {}\" , status , current_time , unlock_time) ;",
      "Ok (())"
    ]
  },
