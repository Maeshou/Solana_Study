[
  {
    "name": "record_craft",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RecordCraft >",
      "recipe: [u8 ; 12]",
      "energy: u32",
      "bump: u8"
    ],
    "attributes": [],
    "body": [
      "let mut rec = recipe ;",
      "let mut cost : u32 = 0 ;",
      "for i in 0 .. rec . len ()",
      "{",
      "let v = rec [i] ;",
      "if ! (v . is_ascii_alphanumeric ())",
      "{",
      "rec [i] = b'*' ;",
      "} cost = cost . wrapping_add ((v as u32) * (i as u32 + 7)) ;",
      "}",
      "let mut e = energy ;",
      "if e > cost",
      "{",
      "e = cost ;",
      "}",
      "let seeds = [& ctx . accounts . crafter . key () . to_bytes () [..] , & rec [..]] ;",
      "let addr = Pubkey :: create_program_address (& seeds , & ctx . program_id , & [bump]) . map_err (| _ | error ! (CraftErr :: Cell)) ? ;",
      "if addr != ctx . accounts . craft_cell . key ()",
      "{",
      "return Err (error ! (CraftErr :: Cell)) ;",
      "}",
      "let log = & mut ctx . accounts . log ;",
      "log . crafter = ctx . accounts . crafter . key () ;",
      "log . recipe = rec ;",
      "log . energy_used = log . energy_used . saturating_add (e) ;",
      "log . cost_accum = log . cost_accum . wrapping_add (cost) ;",
      "Ok (())"
    ]
  },
