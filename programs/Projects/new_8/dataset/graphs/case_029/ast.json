[
  {
    "name": "mint_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < MintItem >",
      "qty: u16",
      "bump_external: u8"
    ],
    "attributes": [],
    "body": [
      "let seeds = & [b\"mintSink\" , ctx . accounts . authority . key . as_ref () , & [bump_external]] ;",
      "let addr = Pubkey :: create_program_address (seeds , ctx . program_id) . map_err (| _ | error ! (MintErr :: SinkMismatch)) ? ;",
      "if addr != ctx . accounts . mint_sink . key ()",
      "{",
      "return Err (error ! (MintErr :: SinkMismatch)) ;",
      "}",
      "let p = & mut ctx . accounts . player_pool ;",
      "if qty > 0",
      "{",
      "p . minted = p . minted . saturating_add (qty as u32) ;",
      "}",
      "if qty > 500",
      "{",
      "p . penalty = p . penalty . saturating_add (7) ;",
      "}",
      "Ok (())"
    ]
  },
