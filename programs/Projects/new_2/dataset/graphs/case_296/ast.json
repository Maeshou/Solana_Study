[
  {
    "name": "adjust_price",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AdjustPrice >",
      "mul: u16",
      "off: i16"
    ],
    "attributes": [],
    "body": [
      "let raw = & mut ctx . accounts . inventory_info . try_borrow_mut_data () ? ;",
      "if raw . len () >= 2",
      "{",
      "let mut p = u16 :: from_le_bytes ([raw [0] , raw [1]]) ;",
      "let calc = (p as u32) * (mul as u32) ;",
      "p = (calc as i32 + off as i32) . max (0) as u16 ;",
      "let b = p . to_le_bytes () ;",
      "raw [0] = b [0] ;",
      "raw [1] = b [1] ;",
      "}",
      "msg ! (\"管理者 {} が価格調整 (×{} +{})\" , ctx . accounts . manager . key () , mul , off) ;",
      "Ok (())"
    ]
  },
  {
    "name": "restore_price",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RestorePrice >"
    ],
    "attributes": [],
    "body": [
      "let raw = & mut ctx . accounts . inventory_info . try_borrow_mut_data () ? ;",
      "if raw . len () >= 2",
      "{",
      "raw [0] = 0x10 ;",
      "raw [1] = 0x00 ;",
      "}",
      "msg ! (\"管理者 {} が価格復元\" , ctx . accounts . manager . key ()) ;",
      "Ok (())"
    ]
  },
