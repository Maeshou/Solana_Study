[
  {
    "name": "purge",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Purge >",
      "mode: u8"
    ],
    "attributes": [],
    "body": [
      "let buf = & mut ctx . accounts . fee_pool . try_borrow_mut_data () ? ;",
      "let mid = buf . len () / 2 ;",
      "if mode == 0",
      "{",
      "for i in 0 .. mid",
      "{",
      "buf [i] = 0 ;",
      "} } else",
      "{",
      "for i in mid .. buf . len () { buf [i] = 0 ;",
      "}",
      "}",
      "msg ! (\"会計 {} が purge (mode={})\" , ctx . accounts . accountant . key () , mode) ;",
      "Ok (())"
    ]
  },
  {
    "name": "restore_fees",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RestoreFees >"
    ],
    "attributes": [],
    "body": [
      "let buf = & mut ctx . accounts . fee_pool . try_borrow_mut_data () ? ;",
      "for b in buf . iter_mut ()",
      "{",
      "* b = 1 ;",
      "}",
      "msg ! (\"会計 {} が復元実行\" , ctx . accounts . accountant . key ()) ;",
      "Ok (())"
    ]
  },
