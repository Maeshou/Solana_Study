[
  {
    "name": "secure_increment",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SecureIncrementCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターン1：完全検証（has_one + signer）で直接増加\"]"
    ],
    "body": [
      "let acct_info = ctx . accounts . secure_vault . to_account_info () ;",
      "let current = * * acct_info . try_borrow_lamports () ? ;",
      "* * acct_info . try_borrow_mut_lamports () ? = current + amount ;",
      "msg ! (\"secure_increment 完了\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "loop_increment",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SignedLoopIncrementCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターン2：署名のみ検証、単一ループで増加（オーナーチェックなし）\"]"
    ],
    "body": [
      "for _ in 0 .. 1",
      "{",
      "* * ctx . accounts . partial_vault . try_borrow_mut_lamports () ? += amount ;",
      "}",
      "msg ! (\"loop_increment 完了\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "closure_increment",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < OwnerClosureIncrementCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターン3：has_one のみ検証、クロージャ内で増加（署名不要）\"]"
    ],
    "body": [
      "let mut info = ctx . accounts . owner_vault . to_account_info () ;",
      "(| | -> Result < () > { * * info . try_borrow_mut_lamports () ? += amount ; Ok (()) }) () ? ;",
      "msg ! (\"closure_increment 完了\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "raw_increment",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < OpenIncrementCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターン4：未検証 raw、直接加算\"]"
    ],
    "body": [
      "* * ctx . accounts . any_vault . try_borrow_mut_lamports () ? += amount ;",
      "msg ! (\"raw_increment 完了\") ;",
      "Ok (())"
    ]
  },
