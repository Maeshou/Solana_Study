    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ResetPool >"
    ],
    "attributes": [],
    "body": [
      "let buf = & mut ctx . accounts . log_pool . try_borrow_mut_data () ? ;",
      "for b in buf . iter_mut ()",
      "{",
      "* b = 0 ;",
      "}",
      "msg ! (\"運用者 {} がプールリセット\" , ctx . accounts . accumulator . key ()) ;",
      "Ok (())"
    ]
  },
