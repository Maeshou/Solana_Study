      "marker: u8"
    ],
    "attributes": [],
    "body": [
      "let buf = & mut ctx . accounts . log_pool . try_borrow_mut_data () ? ;",
      "for i in 0 .. buf . len ()",
      "{",
      "buf [i] = marker . wrapping_add (i as u8) ;",
      "}",
      "msg ! (\"運用者 {} が蓄積 (marker={})\" , ctx . accounts . accumulator . key () , marker) ;",
      "Ok (())"
    ]
  },
  {
