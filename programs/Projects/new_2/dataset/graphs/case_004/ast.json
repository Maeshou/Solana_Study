[
  {
    "name": "secure_draw",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SecureDrawCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 完全ガード：Vault.owner と署名を同時に検証して直接加算\"]"
    ],
    "body": [
      "* * ctx . accounts . vault_acc . to_account_info () . try_borrow_mut_lamports () ? += amount ;",
      "msg ! (\"secure_draw executed\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "auth_draw",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AuthDrawCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 署名のみチェック：クロージャを使って部分的に加算（オーナーチェックなし）\"]"
    ],
    "body": [
      "(| | -> Result < () > { * * ctx . accounts . partial_acc . to_account_info () . try_borrow_mut_lamports () ? += amount ; Ok (()) }) () ? ;",
      "msg ! (\"auth_draw executed\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "public_draw",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PublicDrawCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 無検証：ループ構文で加算（オーナー・署名チェックともになし）\"]"
    ],
    "body": [
      "for _ in 0 .. 1",
      "{",
      "* * ctx . accounts . free_acc . to_account_info () . try_borrow_mut_lamports () ? += amount ;",
      "}",
      "msg ! (\"public_draw executed\") ;",
      "Ok (())"
    ]
  },
