[
  {
    "name": "strict_deposit",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < StrictDepositCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 完全ガード：Vault.owner を has_one で検証し、authority の署名を必須化\"]"
    ],
    "body": [
      "let vault = & mut ctx . accounts . vault_account ;",
      "let current = * * vault . to_account_info () . try_borrow_lamports () ? ;",
      "* * vault . to_account_info () . try_borrow_mut_lamports () ? = current + amount ;",
      "msg ! (\"strict_deposit: {} lamports\" , ** vault . to_account_info () . lamports . borrow ()) ;",
      "Ok (())"
    ]
  },
  {
    "name": "semi_deposit",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SemiDepositCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 部分ガード：authority の署名は検証するが、Vault.owner は未検証\"]"
    ],
    "body": [
      "let vault_info = & mut ctx . accounts . vault_blob ;",
      "let current = * * vault_info . try_borrow_lamports () ? ;",
      "* * vault_info . try_borrow_mut_lamports () ? = current + amount ;",
      "msg ! (\"semi_deposit (owner unchecked): {} lamports\" , ** vault_info . try_borrow_lamports () ?) ;",
      "Ok (())"
    ]
  },
  {
    "name": "open_deposit",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < OpenDepositCtx >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 全く検証なし：raw AccountInfo で署名も所有権もチェックせず\"]"
    ],
    "body": [
      "let vault_info = & mut ctx . accounts . vault_blob ;",
      "let current = * * vault_info . try_borrow_lamports () ? ;",
      "* * vault_info . try_borrow_mut_lamports () ? = current + amount ;",
      "msg ! (\"open_deposit (no checks): {} lamports\" , ** vault_info . try_borrow_lamports () ?) ;",
      "Ok (())"
    ]
  },
