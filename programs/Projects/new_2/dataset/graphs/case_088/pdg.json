    "name": "claim_referral",
    "inputs": [
      "ctx: Context < ClaimReferral >",
      "reward_amount: u64"
    ],
    "nodes": [
      {
        "id": 0,
        "label": "Entry"
      },
      {
        "id": 1,
        "label": "let acc = & mut ctx . accounts . referral_account . to_account_info () ;"
      },
      {
        "id": 2,
        "label": "let data = & mut acc . data . borrow_mut () ;"
      },
      {
        "id": 3,
        "label": "if data . len () < 16 { return err ! (ErrorCode :: DataTooShort) ; }"
      },
      {
        "id": 4,
        "label": "return err ! (ErrorCode :: DataTooShort) ;"
      },
      {
        "id": 5,
        "label": "let mut paid_buf = [0u8 ; 8] ;"
      },
      {
        "id": 6,
        "label": "paid_buf . copy_from_slice (& data [0 .. 8]) ;"
      },
      {
        "id": 7,
        "label": "let mut count_buf = [0u8 ; 8] ;"
      },
      {
        "id": 8,
        "label": "count_buf . copy_from_slice (& data [8 .. 16]) ;"
      },
      {
        "id": 9,
        "label": "let paid_before = u64 :: from_le_bytes (paid_buf) ;"
      },
      {
        "id": 10,
        "label": "let count_before = u64 :: from_le_bytes (count_buf) ;"
      },
      {
        "id": 11,
        "label": "let paid_after = paid_before . saturating_add (reward_amount) ;"
      },
      {
        "id": 12,
        "label": "let count_after = count_before . saturating_add (1) ;"
      },
      {
        "id": 13,
        "label": "data [0 .. 8] . copy_from_slice (& paid_after . to_le_bytes ()) ;"
      },
      {
        "id": 14,
        "label": "data [8 .. 16] . copy_from_slice (& count_after . to_le_bytes ()) ;"
      },
      {
        "id": 15,
        "label": "* * ctx . accounts . reward_pool . to_account_info () . lamports . borrow_mut () = ctx . accounts . reward_pool . to_account_info () . lamports () . saturating_sub (reward_amount) ;"
      },
      {
        "id": 16,
        "label": "* * ctx . accounts . referrer . to_account_info () . lamports . borrow_mut () += reward_amount ;"
      },
      {
        "id": 17,
        "label": "msg ! (\"Referral claimed: referrer={} count {}→{}, paid {}→{} lamports\" , ctx . accounts . referrer . key () , count_before , count_after , paid_before , paid_after) ;"
      },
      {
