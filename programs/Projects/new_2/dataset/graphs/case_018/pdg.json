        "label": "let total = * * payment . lamports . borrow () ;"
      },
      {
        "id": 3,
        "label": "let recipients : Vec < & AccountInfo > = ctx . remaining_accounts . iter () . filter (| acct | acct . is_writable) . collect () ;"
      },
      {
        "id": 4,
        "label": "let count = recipients . len () as u64 ;"
      },
      {
        "id": 5,
        "label": "if count == 0 { return err ! (ErrorCode :: NoRecipients) ; }"
      },
      {
        "id": 6,
        "label": "return err ! (ErrorCode :: NoRecipients) ;"
      },
      {
        "id": 7,
        "label": "let share = total / count ;"
      },
      {
        "id": 8,
        "label": "for r in recipients . iter () { * * r . lamports . borrow_mut () += share ; }"
      },
