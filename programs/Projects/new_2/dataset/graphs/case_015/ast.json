[
  {
    "name": "guarded_deposit",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < GuardedDeposit >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターンA：has_one + signer でオーナー検証済み\"]"
    ],
    "body": [
      "let vault_info = ctx . accounts . secure_vault . to_account_info () ;",
      "let old_balance = * * vault_info . try_borrow_lamports () ? ;",
      "let new_balance = old_balance + amount ;",
      "* * vault_info . try_borrow_mut_lamports () ? = new_balance ;",
      "msg ! (\"guarded_deposit: {}→{}\" , old_balance , new_balance) ;",
      "Ok (())"
    ]
  },
  {
    "name": "signed_transfer",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SignedTransfer >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターンB：署名のみチェック（owner チェックなし）\"]"
    ],
    "body": [
      "let raw = & ctx . accounts . raw_vault ;",
      "let prev = * * raw . try_borrow_lamports () ? ;",
      "* * raw . try_borrow_mut_lamports () ? = prev + amount ;",
      "msg ! (\"signed_transfer: {}\" , ** raw . try_borrow_lamports () ?) ;",
      "Ok (())"
    ]
  },
  {
    "name": "owner_only_transfer",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < OwnerOnlyTransfer >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターンC：手動オーナーチェック（has_one 不使用、if で比較）\"]"
    ],
    "body": [
      "let vault = & ctx . accounts . vault_acc ;",
      "let caller = ctx . accounts . user . key () ;",
      "if vault . owner == caller",
      "{",
      "let info = vault . to_account_info () ;",
      "let before = * * info . try_borrow_lamports () ? ;",
      "* * info . try_borrow_mut_lamports () ? = before + amount ;",
      "msg ! (\"owner_only_transfer:",
      "{",
      "}\" , before + amount) ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "mass_credit",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < MassCredit >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" パターンD：remaining_accounts に含まれる全アカウントをまとめて更新\"]"
    ],
    "body": [
      "for acct in ctx . remaining_accounts . iter ()",
      "{",
      "let bal = acct . lamports () ;",
      "* * acct . try_borrow_mut_lamports () ? = bal + amount ;",
      "}",
      "msg ! (\"mass_credit 完了\") ;",
      "Ok (())"
    ]
  },
