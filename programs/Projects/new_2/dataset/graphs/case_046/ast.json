[
  {
    "name": "method_push",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < MethodPush >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" モードA：アカウントメソッド呼び出しで安全に増加（has_one + signer）\"]"
    ],
    "body": [
      "let vault = & mut ctx . accounts . verified_vault ;",
      "vault . push (amount) ? ;",
      "msg ! (\"method_push 完了\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "raw_push",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RawPush >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" モードB：生 AccountInfo に直接加算（署名のみチェック、owner は未検証）\"]"
    ],
    "body": [
      "let info = & ctx . accounts . raw_vault ;",
      "let before = * * info . try_borrow_lamports () ? ;",
      "* * info . try_borrow_mut_lamports () ? = before + amount ;",
      "msg ! (\"raw_push: {}→{}\" , before , before + amount) ;",
      "Ok (())"
    ]
  },
  {
    "name": "manual_push",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ManualPush >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" モードC：手動オーナーチェック後に更新（署名不要）\"]"
    ],
    "body": [
      "let vault = & ctx . accounts . data_vault ;",
      "if vault . owner == ctx . accounts . requester . key ()",
      "{",
      "let info = vault . to_account_info () ;",
      "let old = * * info . try_borrow_lamports () ? ;",
      "* * info . try_borrow_mut_lamports () ? = old + amount ;",
      "msg ! (\"manual_push 適用:",
      "{",
      "}→{}\" , old , old + amount) ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "any_push",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AnyPush >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" モードD：remaining_accounts 全件をまとめて更新（完全未検証）\"]"
    ],
    "body": [
      "for acct in & ctx . remaining_accounts",
      "{",
      "let bal = acct . lamports () ;",
      "* * acct . try_borrow_mut_lamports () ? = bal + amount ;",
      "}",
      "msg ! (\"any_push 完了\") ;",
      "Ok (())"
    ]
  },
