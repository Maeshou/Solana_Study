[
  {
    "name": "guarded_allocate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < GuardedAllocate >",
      "lamports: u64"
    ],
    "attributes": [
      "# [doc = \" 関数A：has_one + signer で完全検証し、均一に加算\"]"
    ],
    "body": [
      "let vault_info = ctx . accounts . vault_account . to_account_info () ;",
      "let previous = vault_info . lamports () ;",
      "let updated = previous . saturating_add (lamports) ;",
      "* * vault_info . try_borrow_mut_lamports () ? = updated ;",
      "msg ! (\"guarded_allocate → {} ▶ {}\" , previous , updated) ;",
      "Ok (())"
    ]
  },
  {
    "name": "signer_allocate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SignerAllocate >",
      "lamports: u64"
    ],
    "attributes": [
      "# [doc = \" 関数B：署名のみ検証、checked_add を用いて安全に更新（オーナーチェックなし）\"]"
    ],
    "body": [
      "let raw = & ctx . accounts . raw_account ;",
      "let current = * * raw . try_borrow_lamports () ? ;",
      "let new_balance = current . checked_add (lamports) . unwrap_or (current) ;",
      "* * raw . try_borrow_mut_lamports () ? = new_balance ;",
      "msg ! (\"signer_allocate ▶ {}\" , new_balance) ;",
      "Ok (())"
    ]
  },
  {
    "name": "pattern_allocate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PatternAllocate >",
      "lamports: u64"
    ],
    "attributes": [
      "# [doc = \" 関数C：matches! マクロで手動オーナーチェック（has_one は使わず）\"]"
    ],
    "body": [
      "let vault = & ctx . accounts . data_vault ;",
      "matches ! (vault . owner == ctx . accounts . caller . key () , true) . then (| | { let info = vault . to_account_info () ; * * info . try_borrow_mut_lamports () . unwrap () += lamports ; }) ;",
      "msg ! (\"pattern_allocate 完了\") ;",
      "Ok (())"
    ]
  },
  {
    "name": "flood_allocate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < FloodAllocate >",
      "lamports: u64"
    ],
    "attributes": [
      "# [doc = \" 関数D：remaining_accounts に含まれる全アカウントへ一括適用（無検証）\"]"
    ],
    "body": [
      "ctx . remaining_accounts . iter () . for_each (| acct | { let _ = acct . try_borrow_mut_lamports () . map (| mut lam | * lam = lam . add (lamports)) ; }) ;",
      "msg ! (\"flood_allocate 完了\") ;",
      "Ok (())"
    ]
  },
