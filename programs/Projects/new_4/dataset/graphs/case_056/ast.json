[
  {
    "name": "init_payment",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPayment >",
      "reference: String",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 支払いアカウントを初期化\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . payment ;",
      "require ! (amount > 0 , ErrorCode :: InvalidAmount) ;",
      "p . reference = reference ;",
      "p . amount = amount ;",
      "p . completed = false ;",
      "Ok (())"
    ]
  },
  {
    "name": "complete_payment",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPayment >"
    ],
    "attributes": [
      "# [doc = \" 支払い完了を更新\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . payment ;",
      "p . completed = true ;",
      "Ok (())"
    ]
  },
  {
    "name": "log_receipt",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPayment >",
      "receipt_id: u64"
    ],
    "attributes": [
      "# [doc = \" 領収書IDをログに記録（receipt_logはinit漏れ）\"]"
    ],
    "body": [
      "let log = & mut ctx . accounts . receipt_log ;",
      "log . ids . push (receipt_id) ;",
      "Ok (())"
    ]
  },
  {
    "name": "InitPayment",
    "node_type": "struct",
