[
  {
    "name": "init_poll",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPoll >",
      "topic: String"
    ],
    "attributes": [],
    "body": [
      "let poll = & mut ctx . accounts . poll ;",
      "poll . topic = topic ;",
      "poll . total = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "tally_votes",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < TallyVotes >",
      "votes: Vec < u8 >"
    ],
    "attributes": [],
    "body": [
      "let poll = & ctx . accounts . poll ;",
      "let detail = & mut ctx . accounts . detail ;",
      "let mut sum = 0u32 ;",
      "for & v in votes . iter ()",
      "{",
      "if v > 0",
      "{",
      "sum += v as u32 ;",
      "}",
      "}",
      "if sum > poll . total",
      "{",
      "detail . max_votes = poll . total ;",
      "} else",
      "{",
      "detail . max_votes = sum ;",
      "}",
      "Ok (())"
    ]
  },
