[
  {
    "name": "init_order",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitOrder >",
      "order_id: u64",
      "total: u64"
    ],
    "attributes": [],
    "body": [
      "let order = & mut ctx . accounts . order ;",
      "order . id = order_id ;",
      "order . total = total ;",
      "order . item_count = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitOrder >",
      "item_price: u64"
    ],
    "attributes": [],
    "body": [
      "let order = & mut ctx . accounts . order ;",
      "require ! (item_price > 0 , ErrorCode :: InvalidPrice) ;",
      "order . total = order . total . checked_add (item_price) . unwrap () ;",
      "order . item_count = order . item_count . checked_add (1) . unwrap () ;",
      "Ok (())"
    ]
  },
  {
    "name": "record_invoice",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitOrder >",
      "invoice_id: u64"
    ],
    "attributes": [],
    "body": [
      "let hist = & mut ctx . accounts . invoice_history ;",
      "hist . entries . push (invoice_id) ;",
      "Ok (())"
    ]
  },
