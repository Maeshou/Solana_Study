[
  {
    "name": "init_leaderboard",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitLeaderboard >",
      "max_players: u16"
    ],
    "attributes": [],
    "body": [
      "let lb = & mut ctx . accounts . leaderboard ;",
      "lb . max_players = max_players ;",
      "lb . current_count = 0 ;",
      "lb . top_scores = Vec :: new () ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_score",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitLeaderboard >",
      "player: Pubkey",
      "score: u32"
    ],
    "attributes": [],
    "body": [
      "require ! (score > 0 , ErrorCode2 :: ZeroScore) ;",
      "let lb = & mut ctx . accounts . leaderboard ;",
      "if lb . current_count < lb . max_players",
      "{",
      "lb . current_count += 1 ;",
      "}",
      "lb . top_scores . push ((player , score)) ;",
      "Ok (())"
    ]
  },
  {
    "name": "log_score",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitLeaderboard >",
      "player: Pubkey"
    ],
    "attributes": [],
    "body": [
      "let log = & mut ctx . accounts . score_log ;",
      "log . players . push (player) ;",
      "Ok (())"
    ]
  },
