[
  {
    "name": "create_certificate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateCertificate >",
      "id: u64"
    ],
    "attributes": [],
    "body": [
      "let cert = & mut ctx . accounts . certificate ;",
      "cert . id = id ;",
      "cert . valid = true ;",
      "cert . uses = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "revoke_certificate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateCertificate >"
    ],
    "attributes": [],
    "body": [
      "let cert = & mut ctx . accounts . certificate ;",
      "cert . valid = false ;",
      "cert . uses = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "log_revocation",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateCertificate >",
      "reason: String"
    ],
    "attributes": [],
    "body": [
      "let log = & mut ctx . accounts . revocation_log ;",
      "if log . reasons . len () >= 5",
      "{",
      "log . reasons . remove (0) ;",
      "}",
      "log . reasons . push (reason) ;",
      "Ok (())"
    ]
  },
