[
  {
    "name": "init_report",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitReport >",
      "title: String",
      "summary: String"
    ],
    "attributes": [],
    "body": [
      "let rpt = & mut ctx . accounts . report ;",
      "rpt . title = title ;",
      "rpt . pages = 0 ;",
      "rpt . summary = summary ;",
      "rpt . created_at = Clock :: get () ? . unix_timestamp ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_page",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitReport >"
    ],
    "attributes": [],
    "body": [
      "let rpt = & mut ctx . accounts . report ;",
      "rpt . pages = rpt . pages . checked_add (1) . unwrap () ;",
      "rpt . updated_at = Some (Clock :: get () ? . unix_timestamp) ;",
      "Ok (())"
    ]
  },
  {
    "name": "record_history",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitReport >",
      "note: String"
    ],
    "attributes": [],
    "body": [
      "let hist = & mut ctx . accounts . history ;",
      "require ! (note . len () < 256 , ErrorCode :: HistoryTooLong) ;",
      "hist . notes . insert (0 , note) ;",
      "if hist . notes . len () > 50",
      "{",
      "hist . notes . pop () ;",
      "}",
      "Ok (())"
    ]
  },
