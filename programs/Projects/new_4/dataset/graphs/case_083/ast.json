[
  {
    "name": "init_escrow",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitEscrow >",
      "amount: u64"
    ],
    "attributes": [],
    "body": [
      "let e = & mut ctx . accounts . escrow ;",
      "e . initializer = ctx . accounts . initializer . key () ;",
      "e . amount = amount ;",
      "e . active = true ;",
      "Ok (())"
    ]
  },
  {
    "name": "release",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Release >"
    ],
    "attributes": [],
    "body": [
      "let e = & mut ctx . accounts . escrow ;",
      "if ! e . active",
      "{",
      "return Err (error ! (ProgramError :: InvalidAccountData)) ;",
      "}",
      "e . active = false ;",
      "let fee = & mut ctx . accounts . fee_record ;",
      "fee . amount = 100 ;",
      "fee . beneficiary = ctx . accounts . initializer . key () ;",
      "Ok (())"
    ]
  },
