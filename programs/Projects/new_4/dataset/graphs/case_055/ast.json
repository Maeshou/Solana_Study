[
  {
    "name": "init_campaign",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitCampaign >",
      "goal: u64"
    ],
    "attributes": [],
    "body": [
      "let c = & mut ctx . accounts . campaign ;",
      "c . goal = goal ;",
      "c . raised = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "contribute",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitCampaign >",
      "amount: u64"
    ],
    "attributes": [],
    "body": [
      "require ! (amount > 0 , ErrorCode10 :: InvalidAmt) ;",
      "let c = & mut ctx . accounts . campaign ;",
      "c . raised = c . raised . checked_add (amount) . unwrap () ;",
      "Ok (())"
    ]
  },
  {
    "name": "record_contribution",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitCampaign >",
      "donor: Pubkey"
    ],
    "attributes": [],
    "body": [
      "let log = & mut ctx . accounts . contribution_log ;",
      "log . donors . push (donor) ;",
      "Ok (())"
    ]
  },
