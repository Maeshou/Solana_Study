[
  {
    "name": "init_poll",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPoll >",
      "question: String"
    ],
    "attributes": [],
    "body": [
      "let p = & mut ctx . accounts . poll ;",
      "p . question = question ;",
      "p . yes = 0 ;",
      "p . no = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "vote",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPoll >",
      "agree: bool"
    ],
    "attributes": [],
    "body": [
      "let p = & mut ctx . accounts . poll ;",
      "if agree",
      "{",
      "p . yes += 1 ;",
      "} else",
      "{",
      "p . no += 1 ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "record_vote",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitPoll >",
      "voter: Pubkey"
    ],
    "attributes": [],
    "body": [
      "let log = & mut ctx . accounts . vote_log ;",
      "log . voters . push (voter) ;",
      "Ok (())"
    ]
  },
