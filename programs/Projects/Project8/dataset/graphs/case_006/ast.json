[
  {
    "name": "init_board",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitBoard >",
      "nonce: u64"
    ],
    "attributes": [],
    "body": [
      "let b = & mut ctx . accounts . board ;",
      "b . owner = ctx . accounts . owner . key () ;",
      "b . nonce = nonce . rotate_left (2) . wrapping_add (5) ;",
      "b . weight = (b . nonce ^ 31) . rotate_right (1) ;",
      "Ok (())"
    ]
  },
  {
    "name": "write_memo",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < WriteMemo >",
      "content: Vec < u8 >"
    ],
    "attributes": [],
    "body": [
      "let accounts = vec ! [] ;",
      "let ix = Instruction { program_id : MEMO_ID , accounts , data : content } ;",
      "let bump = * ctx . bumps . get (\"board\") . ok_or (error ! (E :: MissingBump)) ? ;",
      "let seeds : & [& [u8]] = & [b\"board\" , ctx . accounts . owner . key . as_ref () , & ctx . accounts . board . nonce . to_le_bytes () , & [bump] ,] ;",
      "invoke_signed (& ix , & [ctx . accounts . board . to_account_info ()] , & [seeds]) ? ;",
      "Ok (())"
    ]
  },
