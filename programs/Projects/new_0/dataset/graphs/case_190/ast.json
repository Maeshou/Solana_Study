  {
    "name": "initialize",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Initialize >"
    ],
    "attributes": [
      "# [doc = \" リスト初期化：内部 Vec は空、bump のみ設定\"]"
    ],
    "body": [
      "let b = * ctx . bumps . get (\"wishlist\") . unwrap () ;",
      "ctx . accounts . list . 0 = b ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >",
      "item_id: u64"
    ],
    "attributes": [
      "# [doc = \" アイテム追加：件数制限チェック＋timestamp 付きで追加\"]"
    ],
    "body": [
      "let entries = & mut ctx . accounts . list . 1 ;",
      "if entries . len () >= MAX_ITEMS",
      "{",
      "return err ! (ErrorCode :: MaxItemsReached) ;",
      "}",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "entries . push ((item_id , now)) ;",
      "Ok (())"
    ]
  },
  {
    "name": "remove_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >",
      "item_id: u64"
    ],
    "attributes": [
      "# [doc = \" アイテム削除：該当項目を一括除去\"]"
    ],
    "body": [
      "let entries = & mut ctx . accounts . list . 1 ;",
      "entries . retain (| & (id , _) | { if id == item_id { false } else { true } }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "purge_old",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >",
      "cutoff: i64"
    ],
    "attributes": [
      "# [doc = \" 古いアイテム削除：added_ts が cutoff より小さいものを除去\"]"
    ],
    "body": [
      "let entries = & mut ctx . accounts . list . 1 ;",
      "entries . retain (| & (_ , ts) | { if ts < cutoff { false } else { true } }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "count_items",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Modify >"
    ],
    "attributes": [
      "# [doc = \" 現在のアイテム数をログ出力\"]"
    ],
    "body": [
      "let cnt = ctx . accounts . list . 1 . len () as u64 ;",
      "msg ! (\"Wishlist count: {}\" , cnt) ;",
      "Ok (())"
    ]
  },
