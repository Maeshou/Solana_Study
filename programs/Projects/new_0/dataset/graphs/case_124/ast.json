[
  {
    "name": "add_recipe",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddRecipe >",
      "title: String",
      "instructions: String"
    ],
    "attributes": [
      "# [doc = \" レシピを新規登録\"]"
    ],
    "body": [
      "if title . len () > 64",
      "{",
      "return Err (ErrorCode :: TitleTooLong . into ()) ;",
      "}",
      "if instructions . len () > 1024",
      "{",
      "return Err (ErrorCode :: InstructionsTooLong . into ()) ;",
      "}",
      "let r = & mut ctx . accounts . recipe ;",
      "r . owner = ctx . accounts . user . key () ;",
      "r . title = title ;",
      "r . instructions = instructions ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_recipe",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateRecipe >",
      "new_title: String",
      "new_instructions: String"
    ],
    "attributes": [
      "# [doc = \" 登録済みレシピを更新\"]"
    ],
    "body": [
      "if new_title . len () > 64",
      "{",
      "return Err (ErrorCode :: TitleTooLong . into ()) ;",
      "}",
      "if new_instructions . len () > 1024",
      "{",
      "return Err (ErrorCode :: InstructionsTooLong . into ()) ;",
      "}",
      "let r = & mut ctx . accounts . recipe ;",
      "if r . owner != ctx . accounts . user . key ()",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "r . title = new_title ;",
      "r . instructions = new_instructions ;",
      "Ok (())"
    ]
  },
  {
    "name": "AddRecipe",
    "node_type": "struct",
    "fields": [
      {
        "name": "recipe",
        "attribute": "# [doc = \" 同一アカウント再初期化防止（Reinit Attack）\"] # [account (init , payer = user , space = 8 + 32 + 4 + 64 + 4 + 1024)]",
        "field_type": "Account < 'info , RecipeAccount >"
      },
      {
        "name": "user",
        "attribute": "# [doc = \" 操作するユーザー（Signer Authorization）\"] # [account (mut)]",
        "field_type": "Signer < 'info >"
      },
      {
