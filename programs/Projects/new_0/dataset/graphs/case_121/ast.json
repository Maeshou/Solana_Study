[
  {
    "name": "add_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddItem >",
      "label: String",
      "quantity: u32"
    ],
    "attributes": [
      "# [doc = \" 新しい品目を追加\"]"
    ],
    "body": [
      "if label . len () > 64",
      "{",
      "return Err (ErrorCode :: LabelTooLong . into ()) ;",
      "}",
      "let item = & mut ctx . accounts . item ;",
      "item . owner = ctx . accounts . user . key () ;",
      "item . label = label ;",
      "item . quantity = quantity ;",
      "Ok (())"
    ]
  },
  {
    "name": "adjust_quantity",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AdjustQuantity >",
      "delta: i32"
    ],
    "attributes": [
      "# [doc = \" 所持数を増減\"]"
    ],
    "body": [
      "let item = & mut ctx . accounts . item ;",
      "let user = ctx . accounts . user . key () ;",
      "if item . owner != user",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "let new_qty = item . quantity as i32 + delta ;",
      "if new_qty < 0",
      "{",
      "return Err (ErrorCode :: InsufficientQuantity . into ()) ;",
      "}",
      "item . quantity = new_qty as u32 ;",
      "Ok (())"
    ]
  },
  {
    "name": "AddItem",
    "node_type": "struct",
    "fields": [
      {
        "name": "item",
        "attribute": "# [doc = \" 同一アカウントを二度初期化できない（Reinit Attack 防止）\"] # [account (init , payer = user , space = 8 + 32 + 4 + 64 + 4)]",
        "field_type": "Account < 'info , InventoryItem >"
      },
