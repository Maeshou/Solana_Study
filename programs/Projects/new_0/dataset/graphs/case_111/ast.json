[
  {
    "name": "create_note",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateNote >",
      "title: String",
      "content: String"
    ],
    "attributes": [
      "# [doc = \" 新規ノート作成\"]"
    ],
    "body": [
      "require ! (title . len () <= 64 , ErrorCode :: TitleTooLong) ;",
      "require ! (content . len () <= 256 , ErrorCode :: ContentTooLong) ;",
      "let note = & mut ctx . accounts . note ;",
      "note . owner = ctx . accounts . user . key () ;",
      "note . title = title ;",
      "note . content = content ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_note",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateNote >",
      "new_title: String",
      "new_content: String"
    ],
    "attributes": [
      "# [doc = \" ノート更新\"]"
    ],
    "body": [
      "let note = & mut ctx . accounts . note ;",
      "require ! (note . owner == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "require ! (new_title . len () <= 64 , ErrorCode :: TitleTooLong) ;",
      "require ! (new_content . len () <= 256 , ErrorCode :: ContentTooLong) ;",
      "note . title = new_title ;",
      "note . content = new_content ;",
      "Ok (())"
    ]
  },
  {
    "name": "CreateNote",
    "node_type": "struct",
    "fields": [
      {
        "name": "note",
        "attribute": "# [doc = \" init 制約で同一アカウント再初期化を防止（Reinit Attack）\"] # [account (init , payer = user , space = 8 + 32 + 4 + 64 + 4 + 256)]",
