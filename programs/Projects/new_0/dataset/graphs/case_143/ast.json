[
  {
    "name": "init_list",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitList >"
    ],
    "attributes": [
      "# [doc = \" ウィッシュリストの初期化\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . wishlist ;",
      "list . owner = ctx . accounts . user . key () ;",
      "list . entries . clear () ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_entry",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyList >",
      "description: String"
    ],
    "attributes": [
      "# [doc = \" アイテムをリストに追加\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . wishlist ;",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "require ! (list . owner == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "require ! (list . entries . len () < 30 , ErrorCode :: ListFull) ;",
      "require ! (description . len () <= 64 , ErrorCode :: TooLong) ;",
      "let mut exists = false ;",
      "for entry in list . entries . iter ()",
      "{",
      "if entry . description == description",
      "{",
      "exists = true ;",
      "break ;",
      "}",
      "}",
      "require ! (! exists , ErrorCode :: Duplicate) ;",
      "list . entries . push (WishEntry { description , added_at : now , purchased : false , purchased_at : 0 , }) ;",
      "Ok (())"
    ]
  },
  {
    "name": "purchase",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyList >",
      "index: u32"
    ],
    "attributes": [
      "# [doc = \" アイテムを購入済みにマーク\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . wishlist ;",
      "let idx = index as usize ;",
      "let now = ctx . accounts . clock . unix_timestamp ;",
      "require ! (list . owner == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "require ! (idx < list . entries . len () , ErrorCode :: IndexOutOfBounds) ;",
      "require ! (! list . entries [idx] . purchased , ErrorCode :: AlreadyPurchased) ;",
      "let item = & mut list . entries [idx] ;",
      "item . purchased = true ;",
      "item . purchased_at = now ;",
      "Ok (())"
    ]
  },
  {
    "name": "remove_entry",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyList >",
      "index: u32"
    ],
    "attributes": [
      "# [doc = \" アイテムをリストから削除\"]"
    ],
    "body": [
      "let list = & mut ctx . accounts . wishlist ;",
      "let idx = index as usize ;",
      "require ! (list . owner == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "require ! (idx < list . entries . len () , ErrorCode :: IndexOutOfBounds) ;",
      "list . entries . remove (idx) ;",
      "Ok (())"
    ]
  },
