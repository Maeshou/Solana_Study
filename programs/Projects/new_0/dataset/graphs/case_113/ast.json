[
  {
    "name": "create_poll",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreatePoll >",
      "title: String",
      "description: String"
    ],
    "attributes": [
      "# [doc = \" 新規 Poll（アンケート）作成\"]"
    ],
    "body": [
      "require ! (title . len () <= 64 , ErrorCode :: TitleTooLong) ;",
      "require ! (description . len () <= 256 , ErrorCode :: DescriptionTooLong) ;",
      "let poll = & mut ctx . accounts . poll ;",
      "poll . owner = ctx . accounts . user . key () ;",
      "poll . title = title ;",
      "poll . description = description ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_poll",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdatePoll >",
      "new_title: String",
      "new_description: String"
    ],
    "attributes": [
      "# [doc = \" Poll のタイトル／説明を更新（作成者のみ）\"]"
    ],
    "body": [
      "let poll = & mut ctx . accounts . poll ;",
      "require ! (poll . owner == ctx . accounts . user . key () , ErrorCode :: Unauthorized) ;",
      "require ! (new_title . len () <= 64 , ErrorCode :: TitleTooLong) ;",
      "require ! (new_description . len () <= 256 , ErrorCode :: DescriptionTooLong) ;",
      "poll . title = new_title ;",
      "poll . description = new_description ;",
      "Ok (())"
    ]
  },
  {
    "name": "CreatePoll",
    "node_type": "struct",
    "fields": [
      {
        "name": "poll",
        "attribute": "# [doc = \" init 制約で同一アカウント再初期化を防止（Reinit Attack）\"] # [account (init , payer = user , space = 8 + 32 + 4 + 64 + 4 + 256)]",
        "field_type": "Account < 'info , PollAccount >"
      },
