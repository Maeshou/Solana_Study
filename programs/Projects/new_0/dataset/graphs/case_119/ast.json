[
  {
    "name": "create_group",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateGroup >",
      "name: String"
    ],
    "attributes": [
      "# [doc = \" 新しいグループを作成\"]"
    ],
    "body": [
      "if name . len () > 64",
      "{",
      "return Err (ErrorCode :: NameTooLong . into ()) ;",
      "}",
      "let grp = & mut ctx . accounts . group ;",
      "grp . admin = ctx . accounts . user . key () ;",
      "grp . name = name ;",
      "grp . participants = Vec :: new () ;",
      "Ok (())"
    ]
  },
  {
    "name": "join_group",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < JoinGroup >"
    ],
    "attributes": [
      "# [doc = \" グループに参加\"]"
    ],
    "body": [
      "let grp = & mut ctx . accounts . group ;",
      "let user = ctx . accounts . user . key () ;",
      "if grp . participants . iter () . any (| & p | p == user)",
      "{",
      "return Err (ErrorCode :: AlreadyMember . into ()) ;",
      "}",
      "if grp . participants . len () >= 10",
      "{",
      "return Err (ErrorCode :: GroupFull . into ()) ;",
      "}",
      "grp . participants . push (user) ;",
      "Ok (())"
    ]
  },
  {
    "name": "leave_group",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < LeaveGroup >"
    ],
    "attributes": [
      "# [doc = \" グループから退会\"]"
    ],
    "body": [
      "let grp = & mut ctx . accounts . group ;",
      "let user = ctx . accounts . user . key () ;",
      "if ! grp . participants . iter () . any (| & p | p == user)",
      "{",
      "return Err (ErrorCode :: NotMember . into ()) ;",
      "}",
      "grp . participants . retain (| & p | p != user) ;",
      "Ok (())"
    ]
  },
