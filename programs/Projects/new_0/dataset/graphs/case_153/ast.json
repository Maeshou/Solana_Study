[
  {
    "name": "create_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateTask >",
      "bump: u8",
      "description: String"
    ],
    "attributes": [
      "# [doc = \" タスク作成：説明文を受け取り、完了フラグを false で初期化\"]"
    ],
    "body": [
      "let task = & mut ctx . accounts . task ;",
      "task . owner = ctx . accounts . user . key () ;",
      "task . bump = bump ;",
      "task . description = description ;",
      "task . completed = false ;",
      "Ok (())"
    ]
  },
  {
    "name": "toggle_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ToggleTask >"
    ],
    "attributes": [
      "# [doc = \" 完了状態トグル：has_one／署名チェックで所有者のみ操作可能\"]"
    ],
    "body": [
      "let task = & mut ctx . accounts . task ;",
      "task . completed = ! task . completed ;",
      "Ok (())"
    ]
  },
  {
