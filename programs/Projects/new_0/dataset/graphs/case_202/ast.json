  {
    "name": "create_campaign",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateCampaign >",
      "goal: u64"
    ],
    "attributes": [
      "# [doc = \" 新しいキャンペーンを作成\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . campaign ;",
      "c . organizer = ctx . accounts . organizer . key () ;",
      "c . goal = goal ;",
      "c . raised = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "donate",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Donate >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 寄付を行う\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . campaign ;",
      "let d = & mut ctx . accounts . donation ;",
      "d . donor = ctx . accounts . donor . key () ;",
      "d . campaign = ctx . accounts . campaign . key () ;",
      "d . amount = amount ;",
      "require_keys_eq ! (d . campaign , c . key () , CrowdError :: CampaignMismatch) ;",
      "require_keys_eq ! (d . donor , ctx . accounts . donor . key () , CrowdError :: DonorMismatch) ;",
      "c . raised = c . raised . checked_add (amount) . ok_or (CrowdError :: Overflow) ? ;",
      "Ok (())"
    ]
  },
  {
    "name": "finalize_donation",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < FinalizeDonation >"
    ],
    "attributes": [
      "# [doc = \" 寄付を確定（例：払い戻しや締め切り処理など）\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . campaign ;",
      "let d = & ctx . accounts . donation ;",
      "require_keys_eq ! (d . campaign , c . key () , CrowdError :: CampaignMismatch) ;",
      "require_keys_eq ! (d . donor , ctx . accounts . donor . key () , CrowdError :: DonorMismatch) ;",
      "Ok (())"
    ]
  }
