[
  {
    "name": "create_account",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateAccount >"
    ],
    "attributes": [
      "# [doc = \" ロイヤリティアカウントを作成\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . loyalty ;",
      "acct . owner = ctx . accounts . user . key () ;",
      "acct . points = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "earn_points",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyAccount >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" ポイント獲得\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . loyalty ;",
      "let signer = ctx . accounts . user . key () ;",
      "if acct . owner != signer",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "let new_total = acct . points . checked_add (amount) . ok_or (ErrorCode :: Overflow) ? ;",
      "acct . points = new_total ;",
      "Ok (())"
    ]
  },
  {
    "name": "redeem_points",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyAccount >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" ポイント利用\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . loyalty ;",
      "let signer = ctx . accounts . user . key () ;",
      "if acct . owner != signer",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "if acct . points < amount",
      "{",
      "return Err (ErrorCode :: InsufficientPoints . into ()) ;",
      "}",
      "let new_total = acct . points . checked_sub (amount) . ok_or (ErrorCode :: Underflow) ? ;",
      "acct . points = new_total ;",
      "Ok (())"
    ]
  },
