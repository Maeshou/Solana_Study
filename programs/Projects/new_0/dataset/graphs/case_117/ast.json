[
  {
    "name": "add_expense",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddExpense >",
      "timestamp: i64",
      "amount: u64",
      "category: String",
      "description: String"
    ],
    "attributes": [
      "# [doc = \" 支出を記録\"]"
    ],
    "body": [
      "if amount == 0",
      "{",
      "return Err (ErrorCode :: InvalidAmount . into ()) ;",
      "}",
      "if category . len () > 32",
      "{",
      "return Err (ErrorCode :: CategoryTooLong . into ()) ;",
      "}",
      "if description . len () > 128",
      "{",
      "return Err (ErrorCode :: DescriptionTooLong . into ()) ;",
      "}",
      "let exp = & mut ctx . accounts . expense ;",
      "exp . owner = ctx . accounts . user . key () ;",
      "exp . timestamp = timestamp ;",
      "exp . amount = amount ;",
      "exp . category = category ;",
      "exp . description = description ;",
      "Ok (())"
    ]
  },
  {
    "name": "edit_expense",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < EditExpense >",
      "new_timestamp: i64",
      "new_amount: u64",
      "new_category: String",
      "new_description: String"
    ],
    "attributes": [
      "# [doc = \" 記録済み支出を編集\"]"
    ],
    "body": [
      "if new_amount == 0",
      "{",
      "return Err (ErrorCode :: InvalidAmount . into ()) ;",
      "}",
      "if new_category . len () > 32",
      "{",
      "return Err (ErrorCode :: CategoryTooLong . into ()) ;",
      "}",
      "if new_description . len () > 128",
      "{",
      "return Err (ErrorCode :: DescriptionTooLong . into ()) ;",
      "}",
      "let exp = & mut ctx . accounts . expense ;",
      "if exp . owner != ctx . accounts . user . key ()",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "exp . timestamp = new_timestamp ;",
      "exp . amount = new_amount ;",
      "exp . category = new_category ;",
      "exp . description = new_description ;",
      "Ok (())"
    ]
  },
  {
