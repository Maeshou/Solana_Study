    "fields": [
      {
        "name": "expense",
        "attribute": "# [doc = \" 同じアカウントを二度初期化できない（Reinit Attack 防止）\"] # [account (init , payer = user , space = 8 + 32 + 8 + 8 + 4 + 32 + 4 + 128)]",
        "field_type": "Account < 'info , Expense >"
