[
  {
    "name": "init_key",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitKey >",
      "key: [u8 ; 32]"
    ],
    "attributes": [
      "# [doc = \" 新規 API キー発行\"]"
    ],
    "body": [
      "require ! (key != [0u8 ; 32] , ErrorCode :: InvalidKey) ;",
      "let acct = & mut ctx . accounts . key_account ;",
      "acct . owner = ctx . accounts . user . key () ;",
      "acct . key = key ;",
      "acct . active = true ;",
      "acct . last_rotated = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "rotate_key",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyKey >",
      "new_key: [u8 ; 32]"
    ],
    "attributes": [
      "# [doc = \" API キーのローテーション\"]"
    ],
    "body": [
      "require ! (new_key != [0u8 ; 32] , ErrorCode :: InvalidKey) ;",
      "let acct = & mut ctx . accounts . key_account ;",
      "require ! (acct . owner == ctx . accounts . user . key () , ErrorCode :: AccessDenied) ;",
      "acct . key = new_key ;",
      "acct . last_rotated = Clock :: get () ? . unix_timestamp ;",
      "Ok (())"
    ]
  },
  {
    "name": "revoke_key",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyKey >"
    ],
    "attributes": [
      "# [doc = \" API キーの無効化\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . key_account ;",
      "require ! (acct . owner == ctx . accounts . user . key () , ErrorCode :: AccessDenied) ;",
      "acct . active = false ;",
      "Ok (())"
    ]
  },
