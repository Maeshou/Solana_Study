[
  {
    "name": "add_movie",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddMovie >",
      "title: String",
      "year: u16"
    ],
    "attributes": [
      "# [doc = \" 映画をウォッチリストに追加\"]"
    ],
    "body": [
      "if title . len () > 100",
      "{",
      "return Err (ErrorCode :: TitleTooLong . into ()) ;",
      "}",
      "if year < 1888",
      "{",
      "return Err (ErrorCode :: InvalidYear . into ()) ;",
      "}",
      "if year > 2100",
      "{",
      "return Err (ErrorCode :: InvalidYear . into ()) ;",
      "}",
      "let movie = & mut ctx . accounts . movie ;",
      "movie . owner = ctx . accounts . user . key () ;",
      "movie . title = title ;",
      "movie . year = year ;",
      "movie . watched = false ;",
      "Ok (())"
    ]
  },
  {
    "name": "mark_watched",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < MarkWatched >"
    ],
    "attributes": [
      "# [doc = \" 登録済み映画を「視聴済み」にマーク\"]"
    ],
    "body": [
      "let movie = & mut ctx . accounts . movie ;",
      "let user_key = ctx . accounts . user . key () ;",
      "if movie . owner != user_key",
      "{",
      "return Err (ErrorCode :: Unauthorized . into ()) ;",
      "}",
      "if movie . watched",
      "{",
      "return Err (ErrorCode :: AlreadyWatched . into ()) ;",
      "}",
      "movie . watched = true ;",
      "Ok (())"
    ]
  },
