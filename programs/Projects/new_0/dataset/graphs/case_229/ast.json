[
  {
    "name": "initialize",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializePoints >",
      "bump: u8"
    ],
    "attributes": [
      "# [doc = \" ポイントアカウントを初期化\"]"
    ],
    "body": [
      "let account = & mut ctx . accounts . points_account ;",
      "account . owner = * ctx . accounts . user . key ;",
      "account . bump = bump ;",
      "account . points = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "award",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyPoints >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" ポイントを付与\"]"
    ],
    "body": [
      "let account = & mut ctx . accounts . points_account ;",
      "account . points = account . points . checked_add (amount) . ok_or (ErrorCode :: Overflow) ? ;",
      "Ok (())"
    ]
  },
  {
    "name": "redeem",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyPoints >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" ポイントを使用\"]"
    ],
    "body": [
      "let account = & mut ctx . accounts . points_account ;",
      "account . points = account . points . checked_sub (amount) . ok_or (ErrorCode :: InsufficientPoints) ? ;",
      "Ok (())"
    ]
  },
