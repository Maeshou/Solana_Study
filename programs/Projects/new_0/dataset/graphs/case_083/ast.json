[
  {
    "name": "initialize_plan",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializePlan >",
      "price_per_period: u64"
    ],
    "attributes": [
      "# [doc = \" サービス管理者だけが呼べる：サブスクプラン設定\"]"
    ],
    "body": [
      "let plan = & mut ctx . accounts . plan ;",
      "plan . admin = ctx . accounts . admin . key () ;",
      "plan . price = price_per_period ;",
      "Ok (())"
    ]
  },
  {
    "name": "subscribe",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Subscribe >",
      "periods: u8"
    ],
    "attributes": [
      "# [doc = \" ユーザーは署名付きで契約を開始\"]"
    ],
    "body": [
      "let cost = ctx . accounts . plan . price . checked_mul (periods as u64) . unwrap () ;",
      "require ! (ctx . accounts . payer . to_account_info () . lamports () >= cost , ErrorCode :: InsufficientFunds) ;",
      "* * ctx . accounts . payer . to_account_info () . try_borrow_mut_lamports () ? -= cost ;",
      "* * ctx . accounts . plan . to_account_info () . try_borrow_mut_lamports () ? += cost ;",
      "let sub = & mut ctx . accounts . subscription ;",
      "sub . user = ctx . accounts . payer . key () ;",
      "sub . periods = periods ;",
      "Ok (())"
    ]
  },
  {
    "name": "view_subscription",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ViewSubscription >"
    ],
    "attributes": [
      "# [doc = \" ユーザーのサブスク情報を表示\"]"
    ],
    "body": [
      "let sub = & ctx . accounts . subscription ;",
      "msg ! (\"User {} has {} period(s) remaining\" , sub . user , sub . periods) ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_price",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdatePrice >",
      "new_price: u64"
    ],
    "attributes": [
      "# [doc = \" 管理者が価格を更新\"]"
    ],
    "body": [
      "require ! (ctx . accounts . admin . is_signer , ErrorCode :: Unauthorized) ;",
      "ctx . accounts . plan . price = new_price ;",
      "msg ! (\"Plan price updated to {}\" , new_price) ;",
      "Ok (())"
    ]
  },
