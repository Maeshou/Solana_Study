[
  {
    "name": "submit_score",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SubmitScore >",
      "new_score: u64"
    ],
    "attributes": [
      "# [doc = \" ユーザーがスコアを提出し、その中で最も高いスコアを `high_score` に保持します。\"]",
      "# [doc = \" 分岐を使わず、`.max()` メソッドで直接比較・更新します。\"]"
    ],
    "body": [
      "let record = & mut ctx . accounts . ranking_record ;",
      "record . user = ctx . accounts . user . key () ;",
      "record . high_score = record . high_score . max (new_score) ;",
      "Ok (())"
    ]
  },
  {
    "name": "view_score",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ViewScore >"
    ],
    "attributes": [
      "# [doc = \" ユーザーの現在の最高スコアをログに出力します（分岐・ループなし）。\"]"
    ],
    "body": [
      "let record = & ctx . accounts . ranking_record ;",
      "msg ! (\"User       : {:?}\" , record . user) ;",
      "msg ! (\"High Score : {}\" , record . high_score) ;",
      "Ok (())"
    ]
  },
