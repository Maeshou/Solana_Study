[
  {
    "name": "create_vote",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateVote >",
      "question: String"
    ],
    "attributes": [
      "# [doc = \" 新しい投票（Yes/No）を作成\"]"
    ],
    "body": [
      "if question . len () > 128",
      "{",
      "return Err (ErrorCode :: QuestionTooLong . into ()) ;",
      "}",
      "let vote = & mut ctx . accounts . vote ;",
      "vote . owner = ctx . accounts . creator . key () ;",
      "vote . question = question ;",
      "vote . yes = 0 ;",
      "vote . no = 0 ;",
      "vote . voters . clear () ;",
      "Ok (())"
    ]
  },
  {
    "name": "cast_vote",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CastVote >",
      "choice: bool"
    ],
    "attributes": [
      "# [doc = \" 投票を行う (true = Yes, false = No)\"]"
    ],
    "body": [
      "let vote = & mut ctx . accounts . vote ;",
      "let user = ctx . accounts . voter . key () ;",
      "if vote . voters . iter () . any (| & v | v == user)",
      "{",
      "return Err (ErrorCode :: AlreadyVoted . into ()) ;",
      "}",
      "if choice",
      "{",
      "vote . yes = vote . yes . checked_add (1) . ok_or (ErrorCode :: Overflow) ? ;",
      "} else",
      "{",
      "vote . no = vote . no . checked_add (1) . ok_or (ErrorCode :: Overflow) ? ;",
      "}",
      "vote . voters . push (user) ;",
      "Ok (())"
    ]
  },
  {
    "name": "CreateVote",
    "node_type": "struct",
    "fields": [
      {
        "name": "vote",
        "attribute": "# [doc = \" Reinit Attack 防止：同じアカウントを二度初期化できない\"] # [account (init , payer = creator , space = 8 + 32 + 4 + 128 + 8 + 8 + 4 + (100 * 32))]",
        "field_type": "Account < 'info , VoteAccount >"
      },
      {
