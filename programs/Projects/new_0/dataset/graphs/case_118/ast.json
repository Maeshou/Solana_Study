        "name": "book",
        "attribute": "# [doc = \" 同一アカウントを二度初期化できない（Reinit Attack 防止）\"] # [account (init , payer = user , space = 8 + 32 + 4 + 64 + 4 + 64 + 1)]",
        "field_type": "Account < 'info , BookAccount >"
      },
      {
        "name": "user",
        "attribute": "# [doc = \" 操作を行うユーザー（署名必須）\"] # [account (mut)]",
        "field_type": "Signer < 'info >"
