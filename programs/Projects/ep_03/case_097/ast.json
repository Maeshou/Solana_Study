[
  {
    "name": "redeem_points",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyExchange >",
      "points: u64"
    ],
    "attributes": [
      "# [doc = \" ユーザーのポイントを商品に交換するが、\"]",
      "# [doc = \" exchange_account.owner と ctx.accounts.user.key() の一致検証がない\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . exchange_account ;",
      "perform_redemption (acct , points) ;",
      "Ok (())"
    ]
  },
  {
    "name": "refund_points",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ModifyExchange >",
      "points: u64"
    ],
    "attributes": [
      "# [doc = \" 交換をキャンセルしてポイントを返却するが、\"]",
      "# [doc = \" exchange_account.owner と ctx.accounts.user.key() の一致検証がない\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . exchange_account ;",
      "perform_refund (acct , points) ;",
      "Ok (())"
    ]
  },
  {
    "name": "perform_redemption",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "acct: & mut ExchangeAccount",
      "points: u64"
    ],
    "attributes": [
      "# [doc = \" ポイント交換を記録し、累計交換数を更新するヘルパー関数\"]"
    ],
    "body": [
      "acct . balance = acct . balance . saturating_sub (points) ;",
      "acct . last_redeemed = points ;",
      "acct . redeem_count = acct . redeem_count . saturating_add (1) ;"
    ]
  },
  {
    "name": "perform_refund",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "acct: & mut ExchangeAccount",
      "points: u64"
    ],
    "attributes": [
      "# [doc = \" ポイント返却を記録し、累計返却数を更新するヘルパー関数\"]"
    ],
    "body": [
      "acct . balance = acct . balance . saturating_add (points) ;",
      "acct . last_refunded = points ;",
      "acct . refund_count = acct . refund_count . saturating_add (1) ;"
    ]
  },
  {
    "name": "ModifyExchange",
    "node_type": "struct",
    "fields": [
      {
        "name": "exchange_account",
        "attribute": "# [account (mut)] # [doc = \" 本来は `#[account(has_one = owner)]` を指定して所有者照合を行うべき\"]",
        "field_type": "Account < 'info , ExchangeAccount >"
      },
      {
        "name": "user",
        "attribute": "# [doc = \" 操作をリクエストするユーザー（署名者）\"]",
        "field_type": "Signer < 'info >"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
  {
    "name": "ExchangeAccount",
    "node_type": "struct",
    "fields": [
      {
        "name": "owner",
        "attribute": "# [doc = \" 本来このアカウントを所有するべきユーザーの Pubkey\"]",
        "field_type": "Pubkey"
      },
      {
        "name": "balance",
        "attribute": "# [doc = \" 現在のポイント残高\"]",
        "field_type": "u64"
      },
      {
        "name": "last_redeemed",
        "attribute": "# [doc = \" 最後に交換したポイント数\"]",
        "field_type": "u64"
