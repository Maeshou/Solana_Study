        "attribute": "# [doc = \" ChallengeRecord.participant == participant.key() は検証される\"] # [account (mut , has_one = participant)]",
        "field_type": "Account < 'info , ChallengeRecord >"
      },
      {
        "name": "challenge",
        "attribute": "# [doc = \" Challenge.key() と record.challenge の検証がないため、\"] # [doc = \" 別のチャレンジのレコードを渡されても通ってしまう\"] # [account (mut)]",
        "field_type": "Account < 'info , Challenge >"
