  {
    "name": "create_challenge",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateChallenge >",
      "pool: u64"
    ],
    "attributes": [
      "# [doc = \" チャレンジを作成\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . challenge ;",
      "c . creator = ctx . accounts . creator . key () ;",
      "c . reward_pool = pool ;",
      "Ok (())"
    ]
  },
  {
    "name": "join_challenge",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < JoinChallenge >"
    ],
    "attributes": [
      "# [doc = \" チャレンジに参加（完了前レコード作成）\"]"
    ],
    "body": [
      "let rec = & mut ctx . accounts . record ;",
      "rec . participant = ctx . accounts . participant . key () ;",
      "rec . challenge = ctx . accounts . challenge . key () ;",
      "rec . completed = false ;",
      "rec . rewarded = false ;",
      "Ok (())"
    ]
  },
  {
    "name": "complete",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CompleteChallenge >",
      "reward: u64"
    ],
    "attributes": [
      "# [doc = \" 完了＆報酬付与\"]"
    ],
    "body": [
      "let rec = & mut ctx . accounts . record ;",
      "let ch = & mut ctx . accounts . challenge ;",
      "rec . completed = true ;",
      "if ! rec . rewarded",
      "{",
      "ch . reward_pool = ch . reward_pool . saturating_sub (reward) ;",
      "rec . rewarded = true ;",
      "}",
      "Ok (())"
    ]
  }
]