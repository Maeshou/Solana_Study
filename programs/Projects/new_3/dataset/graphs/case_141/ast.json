  {
    "name": "initialize_coupon",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeCoupon >",
      "code: String",
      "max_uses: u64"
    ],
    "attributes": [
      "# [doc = \" クーポンを初期化\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . coupon ;",
      "c . issuer = ctx . accounts . issuer . key () ;",
      "c . code = code ;",
      "c . total_uses = max_uses ;",
      "msg ! (\"Coupon {} issued by {}\" , c . code , c . issuer) ;",
      "Ok (())"
    ]
  },
  {
    "name": "use_coupon",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UseCoupon >"
    ],
    "attributes": [
      "# [doc = \" クーポン利用\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . coupon ;",
      "let u = & mut ctx . accounts . usage ;",
      "u . user = ctx . accounts . issuer . key () ;",
      "u . used = true ;",
      "c . total_uses = c . total_uses . checked_sub (1) . unwrap () ;",
      "msg ! (\"User {} used coupon {}, remaining uses: {}\" , u . user , c . code , c . total_uses) ;",
      "Ok (())"
    ]
  }
