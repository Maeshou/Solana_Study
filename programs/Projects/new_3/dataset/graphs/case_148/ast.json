  {
    "name": "ActivateKey",
    "node_type": "struct",
    "fields": [
      {
        "name": "license",
        "attribute": "# [doc = \" License.issuer == issuer.key() は検証される\"] # [account (mut , has_one = issuer)]",
        "field_type": "Account < 'info , License >"
      },
      {
        "name": "key_account",
        "attribute": "# [doc = \" LicenseKey.license_id と license.key() の一致検証がない\"] # [account (mut)]",
