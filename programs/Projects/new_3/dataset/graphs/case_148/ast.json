  {
    "name": "issue_key",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < IssueKey >",
      "user: Pubkey"
    ],
    "attributes": [
      "# [doc = \" 新しいライセンスキーを発行\"]"
    ],
    "body": [
      "let lic = & mut ctx . accounts . license ;",
      "let key = & mut ctx . accounts . key_account ;",
      "key . user = user ;",
      "key . license_id = lic . key () ;",
      "key . activated = false ;",
      "lic . total_keys = lic . total_keys . checked_add (1) . unwrap () ;",
      "msg ! (\"Issued key for {} on product '{}'\" , user , lic . product) ;",
      "Ok (())"
    ]
  },
  {
    "name": "activate_key",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ActivateKey >"
    ],
    "attributes": [
      "# [doc = \" ライセンスキーを有効化\"]"
    ],
    "body": [
      "let lic = & ctx . accounts . license ;",
      "let key = & mut ctx . accounts . key_account ;",
      "key . activated = true ;",
      "msg ! (\"Key {} activated for product '{}'\" , key . key () , lic . product) ;",
      "Ok (())"
    ]
  }
]