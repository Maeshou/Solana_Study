      {
        "name": "plan",
        "attribute": "# [doc = \" Plan.owner == owner.key() は検証される\"] # [account (mut , has_one = owner)]",
        "field_type": "Account < 'info , Plan >"
      },
      {
        "name": "subscription",
        "attribute": "# [doc = \" 新規 Subscription を作成するが、plan フィールドは検証ナシ\"] # [account (init , payer = subscriber , space = 8 + 32 + 32 + 8)]",
