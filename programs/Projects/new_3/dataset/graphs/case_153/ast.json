  },
  {
    "name": "initialize_plan",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializePlan >",
      "monthly_fee: u64"
    ],
    "attributes": [
      "# [doc = \" 月額プランを初期化\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . plan ;",
      "p . owner = ctx . accounts . owner . key () ;",
      "p . monthly_fee = monthly_fee ;",
      "Ok (())"
    ]
  },
  {
    "name": "subscribe",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Subscribe >"
    ],
    "attributes": [
      "# [doc = \" プランに登録（サブスクライブ）\"]"
    ],
    "body": [
      "let p = & ctx . accounts . plan ;",
      "let s = & mut ctx . accounts . subscription ;",
      "s . subscriber = ctx . accounts . subscriber . key () ;",
      "s . plan = p . key () ;",
      "s . expires_at = Clock :: get () ? . unix_timestamp + 30 * 24 * 60 * 60 ;",
      "Ok (())"
    ]
  },
  {
    "name": "renew",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RenewSubscription >",
      "extra_days: i64"
    ],
    "attributes": [
      "# [doc = \" サブスクリプション延長\"]"
    ],
    "body": [
      "let p = & ctx . accounts . plan ;",
      "let s = & mut ctx . accounts . subscription ;",
      "s . expires_at = s . expires_at . checked_add (extra_days * 24 * 60 * 60) . unwrap () ;",
      "Ok (())"
    ]
  }
]