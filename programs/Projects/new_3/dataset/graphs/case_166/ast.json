  {
    "name": "create_ride",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateRide >"
    ],
    "attributes": [
      "# [doc = \" ドライバー乗車枠を作成\"]"
    ],
    "body": [
      "let r = & mut ctx . accounts . ride ;",
      "r . driver = ctx . accounts . driver . key () ;",
      "r . total_served = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "request_ride",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RequestRide >"
    ],
    "attributes": [
      "# [doc = \" ライドリクエストを発行\"]"
    ],
    "body": [
      "let rq = & mut ctx . accounts . request ;",
      "rq . rider = ctx . accounts . rider . key () ;",
      "rq . ride = ctx . accounts . ride . key () ;",
      "rq . request_count = 1 ;",
      "Ok (())"
    ]
  },
  {
    "name": "complete_ride",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CompleteRide >"
    ],
    "attributes": [
      "# [doc = \" ライドを完了\"]"
    ],
    "body": [
      "let rd = & mut ctx . accounts . ride ;",
      "let rq = & mut ctx . accounts . request ;",
      "rd . total_served = rd . total_served . checked_add (1) . unwrap_or (rd . total_served) ;",
      "rq . request_count = rq . request_count . checked_add (1) . unwrap_or (rq . request_count) ;",
      "Ok (())"
    ]
  }
]