  {
    "name": "create_document",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateDocument >",
      "title: String",
      "content_hash: [u8 ; 32]"
    ],
    "attributes": [
      "# [doc = \" ドキュメントを作成\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "doc . owner = ctx . accounts . creator . key () ;",
      "doc . title = title ;",
      "doc . content_hash = content_hash ;",
      "doc . approvals_count = 0 ;",
      "msg ! (\"Document '{}' created by {}\" , doc . title , doc . owner) ;",
      "Ok (())"
    ]
  },
  {
    "name": "request_approval",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RequestApproval >"
    ],
    "attributes": [
      "# [doc = \" 承認要求を初期化\"]"
    ],
    "body": [
      "let rec = & mut ctx . accounts . approval_record ;",
      "rec . approver = ctx . accounts . requester . key () ;",
      "rec . document = ctx . accounts . document . key () ;",
      "rec . approved = false ;",
      "msg ! (\"Approval requested by {} for document {}\" , rec . approver , rec . document) ;",
      "Ok (())"
    ]
  },
  {
    "name": "approve",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ApproveDocument >"
    ],
    "attributes": [
      "# [doc = \" ドキュメントを承認\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "let rec = & mut ctx . accounts . approval_record ;",
      "rec . approved = true ;",
      "doc . approvals_count = doc . approvals_count . checked_add (1) . unwrap () ;",
      "msg ! (\"Document {} approved by {}, total approvals: {}\" , doc . key () , ctx . accounts . owner . key () , doc . approvals_count) ;",
      "Ok (())"
    ]
  }
]