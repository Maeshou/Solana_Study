[
  {
    "name": "claim_level_reward",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ClaimLevelReward >"
    ],
    "attributes": [
      "# [doc = \" バトルパスのレベル報酬を請求するが、\"]",
      "# [doc = \" has_one = config のみ検証され、owner 照合が無いため\"]",
      "# [doc = \" 誰でも他人のアカウントで呼び出せてしまう\"]"
    ],
    "body": [
      "let acct = & mut ctx . accounts . battle_pass_account ;",
      "let cfg = & ctx . accounts . config ;",
      "apply_claim (acct , cfg) ;",
      "Ok (())"
    ]
  },
  {
    "name": "ClaimLevelReward",
    "node_type": "struct",
    "fields": [
      {
        "name": "battle_pass_account",
        "attribute": "# [account (mut , has_one = config ,)]",
        "field_type": "Account < 'info , BattlePassAccount >"
      },
      {
        "name": "config",
        "attribute": "# [doc = \" レベル報酬設定アカウント\"]",
        "field_type": "Account < 'info , BattlePassConfig >"
      },
      {
        "name": "user",
        "attribute": "# [doc = \" 報酬を請求するユーザー（署名者）\"]",
        "field_type": "Signer < 'info >"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
  {
    "name": "apply_claim",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "acct: & mut BattlePassAccount",
      "cfg: & BattlePassConfig"
    ],
    "attributes": [
      "# [doc = \" 場所ごとに散らばる plain `+` をまとめたヘルパー関数\"]"
    ],
    "body": [
      "bump_level (& mut acct . level) ;",
      "add_points (& mut acct . points , cfg . points_per_level) ;",
      "increment_count (& mut acct . claim_count) ;"
    ]
  },
  {
    "name": "bump_level",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "level: & mut u8"
    ],
    "attributes": [
      "# [doc = \" u8 のレベルを 1 増やす（overflow で再ラップ）\"]"
    ],
    "body": [
      "* level = level . wrapping_add (1) ;"
    ]
  },
  {
    "name": "add_points",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "points: & mut u64",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" u64 のポイントを加える（overflow で再ラップ）\"]"
    ],
    "body": [
      "* points = points . wrapping_add (amount) ;"
    ]
  },
  {
    "name": "increment_count",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "count: & mut u64"
    ],
    "attributes": [
      "# [doc = \" u64 のカウンタを 1 増やす（overflow で再ラップ）\"]"
    ],
    "body": [
      "* count = count . wrapping_add (1) ;"
    ]
  },
  {
    "name": "BattlePassAccount",
    "node_type": "struct",
    "fields": [
      {
        "name": "owner",
        "attribute": "# [doc = \" 本来このバトルパスを所有するべきユーザーの Pubkey\"]",
        "field_type": "Pubkey"
      },
      {
        "name": "config",
        "attribute": "# [doc = \" 紐づく設定アカウントの Pubkey\"]",
        "field_type": "Pubkey"
      },
      {
        "name": "level",
        "attribute": "# [doc = \" 現在のバトルパスレベル\"]",
        "field_type": "u8"
      },
      {
        "name": "points",
        "attribute": "# [doc = \" 累計取得ポイント\"]",
        "field_type": "u64"
      },
      {
        "name": "claim_count",
        "attribute": "# [doc = \" 報酬請求回数\"]",
        "field_type": "u64"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
  {
    "name": "BattlePassConfig",
    "node_type": "struct",
    "fields": [
      {
        "name": "points_per_level",
        "attribute": "# [doc = \" レベル1アップごとに付与するポイント量\"]",
        "field_type": "u64"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  }
]