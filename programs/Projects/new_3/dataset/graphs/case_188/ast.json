  {
    "name": "init_config",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitConfig >",
      "pref: String"
    ],
    "attributes": [
      "# [doc = \" 通知設定を初期化\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . config ;",
      "c . owner = ctx . accounts . owner . key () ;",
      "c . preferences = pref ;",
      "Ok (())"
    ]
  },
  {
    "name": "request_change",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RequestChange >",
      "new_pref: String"
    ],
    "attributes": [
      "# [doc = \" 設定変更をリクエスト（記録のみ）\"]"
    ],
    "body": [
      "let r = & mut ctx . accounts . record ;",
      "r . requester = ctx . accounts . owner . key () ;",
      "r . config = ctx . accounts . config . key () ;",
      "r . new_pref = new_pref ;",
      "Ok (())"
    ]
  },
  {
    "name": "apply_change",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ApplyChange >"
    ],
    "attributes": [
      "# [doc = \" 設定変更を適用\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . config ;",
      "let r = & ctx . accounts . record ;",
      "c . preferences = r . new_pref . clone () ;",
      "Ok (())"
    ]
  }
