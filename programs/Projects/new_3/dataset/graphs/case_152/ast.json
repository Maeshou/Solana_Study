  {
    "name": "make_donation",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < MakeDonation >",
      "amount: u64"
    ],
    "attributes": [],
    "body": [
      "let c = & mut ctx . accounts . campaign ;",
      "let d = & mut ctx . accounts . donation ;",
      "d . donor = ctx . accounts . donor . key () ;",
      "d . campaign = c . key () ;",
      "d . contribution = d . contribution . saturating_add (amount) ;",
      "c . total_contributions = c . total_contributions . checked_add (amount) . unwrap_or (c . total_contributions) ;",
      "c . backers_count = c . backers_count . saturating_add (1) ;",
      "Ok (())"
    ]
  }
