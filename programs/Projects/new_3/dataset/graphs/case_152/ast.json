  {
    "name": "initialize_campaign",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeCampaign >",
      "_goal: u64"
    ],
    "attributes": [],
    "body": [
      "let c = & mut ctx . accounts . campaign ;",
      "c . owner = ctx . accounts . owner . key () ;",
      "c . total_contributions = 0 ;",
      "c . backers_count = 0 ;",
      "Ok (())"
