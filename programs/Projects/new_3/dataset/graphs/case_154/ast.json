  {
    "name": "submit_review",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < SubmitReview >",
      "rating: u8"
    ],
    "attributes": [
      "# [doc = \" レビューを投稿\"]"
    ],
    "body": [
      "let prod = & mut ctx . accounts . product ;",
      "let rev = & mut ctx . accounts . review ;",
      "rev . reviewer = ctx . accounts . reviewer . key () ;",
      "rev . product = prod . key () ;",
      "rev . rating = rating ;",
      "rev . approved = false ;",
      "prod . total_reviews = prod . total_reviews . checked_add (1) . unwrap () ;",
      "Ok (())"
    ]
  },
  {
    "name": "approve_review",
    "node_type": "function",
    "fields": null,
    "inputs": [
