  {
    "name": "create_product",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateProduct >",
      "name: String"
    ],
    "attributes": [
      "# [doc = \" 製品を登録\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . product_account ;",
      "p . vendor = ctx . accounts . vendor . key () ;",
      "p . name = name ;",
      "Ok (())"
    ]
  },
  {
    "name": "post_review",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PostReview >",
      "comment: String"
    ],
    "attributes": [
      "# [doc = \" レビューを投稿\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . product_account ;",
      "let rr = & mut ctx . accounts . review_record_account ;",
      "rr . reviewer = ctx . accounts . reviewer . key () ;",
      "rr . product = p . key () ;",
      "rr . comment = comment . clone () ;",
      "p . reviewers . push (rr . reviewer) ;",
      "Ok (())"
    ]
  },
  {
    "name": "clear_all_reviews",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ClearAllReviews >"
    ],
    "attributes": [
      "# [doc = \" 全レビューをクリア（一括削除）\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . product_account ;",
      "p . reviewers . clear () ;",
      "Ok (())"
    ]
  }
