  {
    "name": "initialize_pool",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializePool >"
    ],
    "attributes": [
      "# [doc = \" プールを初期化\"]"
    ],
    "body": [
      "let pool = & mut ctx . accounts . pool ;",
      "pool . manager = ctx . accounts . manager . key () ;",
      "pool . total_staked = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "stake",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < Stake >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" ステークを預け入れ\"]"
    ],
    "body": [
      "let pool = & mut ctx . accounts . pool ;",
      "let stake_acc = & mut ctx . accounts . stake_account ;",
      "stake_acc . staked_amount = stake_acc . staked_amount . checked_add (amount) . unwrap () ;",
      "pool . total_staked = pool . total_staked . checked_add (amount) . unwrap () ;",
      "emit ! (StakeDeposited { pool : pool . key () , staker : stake_acc . owner , amount , }) ;",
      "Ok (())"
    ]
  }
