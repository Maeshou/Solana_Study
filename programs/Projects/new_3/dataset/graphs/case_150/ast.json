  {
    "name": "initialize_project",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeProject >",
      "title: String"
    ],
    "attributes": [
      "# [doc = \" プロジェクトを初期化\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . project ;",
      "p . owner = ctx . accounts . owner . key () ;",
      "p . title = title ;",
      "p . task_count = 0 ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddTask >",
      "description: String"
    ],
    "attributes": [
      "# [doc = \" タスクを追加\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . project ;",
      "let t = & mut ctx . accounts . task ;",
      "t . description = description ;",
      "t . project = p . key () ;",
      "t . completed = false ;",
      "p . task_count = p . task_count . checked_add (1) . unwrap () ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_task",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateTask >"
    ],
    "attributes": [
      "# [doc = \" タスクを完了にマーク\"]"
    ],
    "body": [
      "let t = & mut ctx . accounts . task ;",
      "t . completed = true ;",
      "Ok (())"
    ]
  }
