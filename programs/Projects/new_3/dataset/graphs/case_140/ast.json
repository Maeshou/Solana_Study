        "name": "program",
        "attribute": "# [doc = \" ReferralProgram.program_owner == program_owner.key() はチェックされる\"] # [account (mut , has_one = program_owner)]",
        "field_type": "Account < 'info , ReferralProgram >"
      },
      {
        "name": "record",
        "attribute": "# [doc = \" しかし ReferralRecord.program_id == program.key() の検証は一切ない\"] # [account (mut)]",
