  {
    "name": "initialize_program",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeProgram >",
      "pool_points: u64"
    ],
    "attributes": [],
    "body": [
      "let p = & mut ctx . accounts . program ;",
      "p . owner = ctx . accounts . owner . key () ;",
      "p . total_points = pool_points ;",
      "Ok (())"
    ]
  },
  {
    "name": "create_account",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateAccount >",
      "initial_balance: u64"
    ],
    "attributes": [],
    "body": [
      "let p = & mut ctx . accounts . program ;",
      "let a = & mut ctx . accounts . account ;",
      "a . user = ctx . accounts . user . key () ;",
      "a . program = p . key () ;",
      "a . balance = initial_balance ;",
      "p . total_points = p . total_points . checked_sub (initial_balance) . unwrap_or (p . total_points) ;",
      "Ok (())"
    ]
  },
  {
    "name": "redeem_item",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < RedeemItem >",
      "item_id: String"
    ],
    "attributes": [],
    "body": [
      "let p = & mut ctx . accounts . program ;",
      "let a = & mut ctx . accounts . account ;",
      "let r = & mut ctx . accounts . record ;",
      "r . account = a . key () ;",
      "r . program = p . key () ;",
      "r . item_code = format ! (\"ITEM-{}\" , a . user) ;",
      "let cost = 10u64 ;",
      "a . balance = a . balance . checked_sub (cost) . unwrap_or (a . balance) ;",
      "p . total_points = p . total_points . checked_add (cost) . unwrap_or (p . total_points) ;",
      "Ok (())"
    ]
  }
