  {
    "name": "create_document",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateDocument >",
      "title: String"
    ],
    "attributes": [
      "# [doc = \" 新しいドキュメントを作成\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "doc . owner = ctx . accounts . owner . key () ;",
      "doc . title = title ;",
      "Ok (())"
    ]
  },
  {
    "name": "add_tag",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AddTag >",
      "tag: String"
    ],
    "attributes": [
      "# [doc = \" タグを追加\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "let rec = & mut ctx . accounts . record ;",
      "rec . user = ctx . accounts . owner . key () ;",
      "rec . document = doc . key () ;",
      "rec . tag = tag . clone () ;",
      "doc . tags . push (tag) ;",
      "Ok (())"
    ]
  },
  {
    "name": "clear_tags",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ClearTags >"
    ],
    "attributes": [
      "# [doc = \" すべてのタグをクリア（タグ一覧を空にする）\"]"
    ],
    "body": [
      "let doc = & mut ctx . accounts . document ;",
      "doc . tags . clear () ;",
      "Ok (())"
    ]
  }
