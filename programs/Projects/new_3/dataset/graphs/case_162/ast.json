  {
    "name": "initialize_coupon",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitializeCoupon >",
      "code: String",
      "max_uses: u64"
    ],
    "attributes": [
      "# [doc = \" クーポンを初期化\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . coupon ;",
      "c . issuer = ctx . accounts . issuer . key () ;",
      "c . code = code ;",
      "c . remaining = max_uses ;",
      "Ok (())"
    ]
  },
  {
    "name": "use_coupon",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UseCoupon >"
    ],
    "attributes": [
      "# [doc = \" クーポンを利用\"]"
    ],
    "body": [
      "let c = & mut ctx . accounts . coupon ;",
      "let u = & mut ctx . accounts . usage ;",
      "u . user = ctx . accounts . issuer . key () ;",
      "u . coupon = c . key () ;",
      "u . times_used = u . times_used . saturating_add (1) ;",
      "c . remaining = c . remaining . saturating_sub (1) ;",
      "Ok (())"
    ]
  }
