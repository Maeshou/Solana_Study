  {
    "name": "create_auction",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < CreateAuction >"
    ],
    "attributes": [
      "# [doc = \" オークションを開始\"]"
    ],
    "body": [
      "let a = & mut ctx . accounts . auction ;",
      "a . seller = ctx . accounts . seller . key () ;",
      "a . highest_bid = 0 ;",
      "a . winner = Pubkey :: default () ;",
      "Ok (())"
    ]
  },
  {
    "name": "place_bid",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < PlaceBid >",
      "amount: u64"
    ],
    "attributes": [
      "# [doc = \" 入札を行う\"]"
    ],
    "body": [
      "let a = & mut ctx . accounts . auction ;",
      "let b = & mut ctx . accounts . bid ;",
      "b . bidder = ctx . accounts . bidder . key () ;",
      "b . auction = a . key () ;",
      "b . amount = amount ;",
      "if b . amount > a . highest_bid",
      "{",
      "a . highest_bid = b . amount ;",
      "a . winner = b . bidder ;",
      "}",
      "Ok (())"
    ]
  },
  {
    "name": "finalize",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < FinalizeAuction >"
    ],
    "attributes": [
      "# [doc = \" オークションを確定（出品者のみ実行可能）\"]"
    ],
    "body": [
      "let a = & mut ctx . accounts . auction ;",
      "let b = & ctx . accounts . bid ;",
      "a . winner = b . bidder ;",
      "Ok (())"
    ]
  }
