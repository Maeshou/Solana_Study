  {
    "name": "issue_prescription",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < IssuePrescription >",
      "patient: Pubkey"
    ],
    "attributes": [
      "# [doc = \" 新しい処方箋を発行\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . prescription ;",
      "p . doctor = ctx . accounts . doctor . key () ;",
      "p . patient = patient ;",
      "Ok (())"
    ]
  },
  {
    "name": "fill_medication",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < FillMedication >"
    ],
    "attributes": [
      "# [doc = \" 調剤記録を更新\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . prescription ;",
      "let fr = & mut ctx . accounts . fill_record ;",
      "fr . pharmacist = ctx . accounts . doctor . key () ;",
      "fr . prescription = p . key () ;",
      "fr . times_filled = fr . times_filled . checked_add (1) . unwrap_or_default () ;",
      "p . fills = p . fills . checked_add (1) . unwrap_or_default () ;",
      "Ok (())"
    ]
  },
  {
    "name": "confirm_fill",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ConfirmFill >"
    ],
    "attributes": [
      "# [doc = \" 調剤確定（薬剤師のみ実行可能）\"]"
    ],
    "body": [
      "let p = & mut ctx . accounts . prescription ;",
      "let fr = & mut ctx . accounts . fill_record ;",
      "p . fills = p . fills . checked_sub (1) . unwrap_or_default () ;",
      "Ok (())"
    ]
  }
]