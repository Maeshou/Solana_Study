[
  {
    "name": "perform_draw",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < DrawContext >",
      "base_rate_bps: u16",
      "total_supply: u64",
      "issuer_flag: u8"
    ],
    "attributes": [
      "# [doc = \" NFT 保有量に応じた当選抽選を行い、結果をイベントで通知します。\"]",
      "# [doc = \" 署名チェックを省略し、状態アカウントも使わないシンプル版。\"]",
      "# [doc = \"\"]",
      "# [doc = \" - `base_rate_bps` : 1 枚あたりの当選確率（bps, 10000 = 100%）\"]",
      "# [doc = \" - `total_supply`  : 発行済みNFT総数\"]",
      "# [doc = \" - `issuer_flag`   : 発行体なら1、その他は0\"]"
    ],
    "body": [
      "let owned = ctx . accounts . hold_acc . amount ;",
      "let numerator = owned + issuer_flag as u64 ;",
      "let denominator = total_supply + 1 ;",
      "let rate_bps = (numerator . checked_mul (base_rate_bps as u64) . unwrap () / denominator) as u16 ;",
      "let random_bps = (ctx . accounts . clock . unix_timestamp as u64 % 10_000) as u16 ;",
      "let success = random_bps < rate_bps ;",
      "emit ! (DrawOutcome { caller : * ctx . accounts . user . key , numerator , denominator , rate_bps , random_bps , success , }) ;"
    ]
  },
  {
    "name": "DrawContext",
    "node_type": "struct",
    "fields": [
      {
        "name": "user",
        "attribute": "# [doc = \" 参加ユーザー：SignerではなくAccountInfoのまま（署名チェックなし）\"]",
        "field_type": "AccountInfo < 'info >"
      },
      {
        "name": "hold_acc",
        "attribute": "# [doc = \" 保有量を参照するTokenAccount\"] # [account (constraint = hold_acc . owner == * user . key , constraint = hold_acc . mint == nft_mint . key ())]",
        "field_type": "Account < 'info , TokenAccount >"
      },
      {
        "name": "nft_mint",
        "attribute": "# [doc = \" 対象NFT Mintアドレス\"]",
        "field_type": "AccountInfo < 'info >"
      },
      {
        "name": "clock",
        "attribute": "# [doc = \" 乱数源となるClock\"]",
        "field_type": "Sysvar < 'info , Clock >"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
