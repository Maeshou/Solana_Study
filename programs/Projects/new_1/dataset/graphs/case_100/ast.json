[
  {
    "name": "init_leaderboard",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitLeaderboard >",
      "default_scores: [u64 ; 5]"
    ],
    "attributes": [
      "# [doc = \" 初期化：トップ5スロットにデフォルトのプレイヤーとスコアを設定  \"]",
      "# [doc = \" ⚠\\u{fe0f} initializer の署名チェックなしの脆弱性あり\"]"
    ],
    "body": [
      "let lb = & mut ctx . accounts . leaderboard ;",
      "lb . players = [Pubkey :: default () ; 5] ;",
      "lb . scores = default_scores ;",
      "lb . bonus_claimed = [false ; 5] ;",
      "Ok (())"
    ]
  },
  {
    "name": "update_slot",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < UpdateSlot >",
      "slot: u8",
      "player: Pubkey",
      "score: u64"
    ],
    "attributes": [
      "# [doc = \" スロット更新：指定スロットのプレイヤーとスコアを直接書き換え  \"]",
      "# [doc = \" ⚠\\u{fe0f} operator（AccountInfo）に対する署名チェックも所有者検証もなし\"]"
    ],
    "body": [
      "let lb = & mut ctx . accounts . leaderboard ;",
      "let idx = slot as usize ;",
      "lb . players [idx] = player ;",
      "lb . scores [idx] = score ;",
      "Ok (())"
    ]
  },
  {
    "name": "claim_bonus",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < ClaimBonus >",
      "slot: u8"
    ],
    "attributes": [
      "# [doc = \" ボーナス請求：指定スロットのスコアを返し、請求フラグを立てる  \"]",
      "# [doc = \" ⚠\\u{fe0f} claimer（UncheckedAccount）に対する署名チェックなし\"]"
    ],
    "body": [
      "let lb = & mut ctx . accounts . leaderboard ;",
      "let idx = slot as usize ;",
      "let bonus = lb . scores [idx] ;",
      "lb . bonus_claimed [idx] = true ;",
      "bonus"
    ]
  },
