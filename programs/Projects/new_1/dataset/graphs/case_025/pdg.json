        "label": "let r = & mut ctx . accounts . referrer_data ;"
      },
      {
        "id": 3,
        "label": "r . count = r . count . checked_add (1) . unwrap () ;"
      },
      {
        "id": 4,
        "label": "r . points = r . points . checked_add (bonus) . unwrap () ;"
      },
      {
        "id": 5,
        "label": "r . last_time = now ;"
      },
      {
        "id": 6,
        "label": "let f = & mut ctx . accounts . friend_data ;"
      },
      {
        "id": 7,
        "label": "f . points = f . points . checked_add (bonus / 2) . unwrap () ;"
      },
      {
        "id": 8,
        "label": "f . joined = true ;"
      },
      {
        "id": 9,
        "label": "f . joined_at = now ;"
      },
      {
        "id": 10,
        "label": "emit ! (ReferralEvent { referrer : * ctx . accounts . user . key , friend : * ctx . accounts . friend . key , count : r . count , ref_points : r . points , friend_points : f . points , }) ;"
