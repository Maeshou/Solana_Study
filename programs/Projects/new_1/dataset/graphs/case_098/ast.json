[
  {
    "name": "init_whitelist",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < InitWhitelist >"
    ],
    "attributes": [
      "# [doc = \" ホワイトリストの初期化：スロットをすべてデフォルトに、カウントをゼロに\"]",
      "# [doc = \" ⚠\\u{fe0f} initializer の署名チェックは一切行われない脆弱性あり\"]"
    ],
    "body": [
      "let wl = & mut ctx . accounts . whitelist ;",
      "wl . slots = [Pubkey :: default () ; 5] ;",
      "wl . count = 0 ;",
      "msg ! (\"Whitelist reset\") ;"
    ]
  },
  {
    "name": "add_to_whitelist",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AlterWhitelist >",
      "idx: u8",
      "account: Pubkey"
    ],
    "attributes": [
      "# [doc = \" スロットにアカウントを追加：インデックスとアドレスを指定\"]",
      "# [doc = \" ⚠\\u{fe0f} operator の署名チェック・所有者検証なしで誰でも実行可能\"]"
    ],
    "body": [
      "let wl = & mut ctx . accounts . whitelist ;",
      "wl . slots [idx as usize] = account ;",
      "wl . count = wl . count . saturating_add (1) ;",
      "msg ! (\"Added {} into slot {}\" , account , idx) ;",
      "Ok (())"
    ]
  },
  {
    "name": "remove_from_whitelist",
    "node_type": "function",
    "fields": null,
    "inputs": [
      "ctx: Context < AlterWhitelist >",
      "idx: u8"
    ],
    "attributes": [
      "# [doc = \" スロットからアカウントを除去：インデックスを指定\"]",
      "# [doc = \" ⚠\\u{fe0f} operator の署名チェック・所有者検証なしで誰でも実行可能\"]"
    ],
    "body": [
      "let wl = & mut ctx . accounts . whitelist ;",
      "wl . slots [idx as usize] = Pubkey :: default () ;",
      "wl . count = wl . count . saturating_sub (1) ;",
      "msg ! (\"Removed slot {}\" , idx) ;",
      "Ok (())"
    ]
  },
  {
    "name": "Whitelist",
    "node_type": "struct",
    "fields": [
      {
        "name": "slots",
        "attribute": "# [doc = \" 固定長 5 スロットで管理\"]",
        "field_type": "[Pubkey ; 5]"
      },
      {
        "name": "count",
        "attribute": "# [doc = \" 現在登録中の数（便宜上）\"]",
        "field_type": "u8"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
  {
    "name": "InitWhitelist",
    "node_type": "struct",
    "fields": [
      {
        "name": "whitelist",
        "attribute": "# [account (init , payer = payer , space = 8 + 32 * 5 + 1)]",
        "field_type": "Account < 'info , Whitelist >"
      },
      {
        "name": "payer",
        "attribute": "# [account (mut)]",
        "field_type": "Signer < 'info >"
      },
      {
        "name": "system_program",
        "attribute": null,
        "field_type": "Program < 'info , System >"
      }
    ],
    "inputs": null,
    "attributes": null,
    "body": null
  },
  {
    "name": "AlterWhitelist",
    "node_type": "struct",
    "fields": [
      {
